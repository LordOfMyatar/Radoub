<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DialogEditor.App"
             xmlns:local="using:DialogEditor"
             xmlns:models="using:DialogEditor.Models"
             xmlns:controls="using:DialogEditor.Controls"
             RequestedThemeVariant="Light">
             <!-- Light theme by default. Users can switch via View menu. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />

        <!-- Theme-aware window background -->
        <Style Selector="Window">
            <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
        </Style>

        <!-- Global font styles that respond to settings changes -->
        <!-- These will be updated dynamically from code-behind -->
        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <!-- SpellCheckTextBox inherits TextBox styling -->
        <Style Selector="controls|SpellCheckTextBox">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinHeight" Value="28"/>
        </Style>

        <Style Selector="MenuItem">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="ComboBox">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="CheckBox">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="RadioButton">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="ListBox">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="TreeView">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <!-- TreeView drag-drop indicator styles (#450) -->
        <!-- Target PART_LayoutRoot inside the template for visual feedback -->
        <Style Selector="TreeViewItem.drop-before /template/ Border#PART_LayoutRoot">
            <Setter Property="BorderThickness" Value="0,3,0,0"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
        </Style>

        <Style Selector="TreeViewItem.drop-after /template/ Border#PART_LayoutRoot">
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
        </Style>

        <Style Selector="TreeViewItem.drop-into /template/ Border#PART_LayoutRoot">
            <Setter Property="Background" Value="#400078D4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <Style Selector="TabControl">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>


        <Style Selector="Label">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <!-- Scrollbar visibility and usability improvements (Issue #63) -->
        <Style Selector="ScrollBar">
            <Setter Property="AllowAutoHide" Value="{DynamicResource AllowScrollbarAutoHide}"/>
        </Style>

        <Style Selector="ScrollBar:vertical">
            <Setter Property="Width" Value="18"/>
        </Style>

        <Style Selector="ScrollBar:horizontal">
            <Setter Property="Height" Value="18"/>
        </Style>
    </Application.Styles>

    <Application.Resources>
        <!-- Default font size and family - will be updated from settings -->
        <x:Double x:Key="GlobalFontSize">14</x:Double>
        <FontFamily x:Key="GlobalFontFamily">$Default</FontFamily>

        <!-- Default theme background - will be overridden by theme manager -->
        <SolidColorBrush x:Key="ThemeBackground">#FFFFFF</SolidColorBrush>

        <!-- Title bar colors - will be overridden by theme manager -->
        <SolidColorBrush x:Key="ThemeTitleBar">#3C3C3C</SolidColorBrush>
        <SolidColorBrush x:Key="ThemeTitleBarForeground">#FFFFFF</SolidColorBrush>

        <!-- Scrollbar auto-hide preference (Issue #63) - will be updated from settings -->
        <x:Boolean x:Key="AllowScrollbarAutoHide">False</x:Boolean>

        <!-- Global converters for UI -->
        <models:BoolToTextWrappingConverter x:Key="BoolToTextWrappingConverter"/>
        <models:NotNullConverter x:Key="NotNullConverter"/>
    </Application.Resources>
</Application>