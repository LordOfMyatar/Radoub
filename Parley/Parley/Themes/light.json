{
  "manifest_version": "1.0",
  "plugin": {
    "id": "org.parley.theme.light",
    "name": "Light",
    "version": "1.0.0",
    "author": "Parley Team",
    "description": "Clean, professional light theme with excellent readability",
    "type": "theme",
    "tags": ["official", "light", "default"]
  },
  "base_theme": "Light",
  "accessibility": {
    "type": "standard",
    "contrast_level": "AAA"
  },
  "colors": {
    "background": "#FFFFFF",
    "sidebar": "#F5F5F5",
    "text": "#1A1A1A",
    "selection": "#0078D4",
    "border": "#D0D0D0",
    "accent": "#0078D4",
    "error": "#D32F2F",
    "warning": "#F57C00",
    "success": "#388E3C",
    "info": "#1976D2",
    "tree_entry": "#FF8A65",
    "tree_reply": "#4FC3F7",
    "tree_link": "#757575",
    "title_bar": "#E0E0E0",
    "title_bar_foreground": "#1A1A1A",
    "button_primary": "#0078D4",
    "button_secondary": "#757575",
    "button_hover": "#005A9E",
    "edit_mode_border": "#4FC3F7",
    "edit_mode_unsaved": "#FFB74D",
    "edit_mode_saved": "#81C784",
    "auto_trim_border": "#42A5F5",
    "speaker_1": "#1565C0",
    "speaker_2": "#6A1B9A",
    "speaker_3": "#C62828",
    "speaker_4": "#2E7D32",
    "speaker_5": "#EF6C00",
    "speaker_6": "#AD1457"
  },
  "fonts": {
    "primary": "$Default",
    "monospace": "Consolas",
    "size": 14,
    "weight": "Normal"
  },
  "spacing": {
    "control_padding": 8,
    "control_margin": 4,
    "panel_spacing": 8,
    "min_control_height": 28,
    "tree_indent": 16
  }
}
