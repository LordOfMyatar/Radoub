{
  "manifest_version": "1.0",
  "plugin": {
    "id": "org.parley.theme.protanopia",
    "name": "Protanopia (Red Colorblind)",
    "version": "1.0.0",
    "author": "Parley Team",
    "description": "Accessibility theme for protanopia (red colorblindness). Uses sky blue/orange palette.",
    "type": "theme",
    "tags": ["official", "accessibility", "colorblind", "protanopia"]
  },
  "base_theme": "Light",
  "accessibility": {
    "type": "colorblind",
    "condition": "protanopia",
    "contrast_level": "AAA"
  },
  "colors": {
    "background": "#FFFFFF",
    "sidebar": "#F5F5F5",
    "text": "#000000",
    "selection": "#0099CC",
    "border": "#999999",
    "accent": "#0099CC",
    "error": "#CC5500",
    "warning": "#FFAA00",
    "success": "#00AACC",
    "info": "#0099CC",
    "tree_entry": "#0099CC",
    "tree_reply": "#FF9944",
    "tree_link": "#6600CC",
    "button_primary": "#0099CC",
    "button_secondary": "#666666",
    "button_hover": "#007799"
  },
  "fonts": {
    "primary": "$Default",
    "monospace": "Consolas",
    "size": 14,
    "weight": "Normal"
  },
  "spacing": {
    "control_padding": 8,
    "control_margin": 4,
    "panel_spacing": 8,
    "min_control_height": 28,
    "tree_indent": 16
  }
}
