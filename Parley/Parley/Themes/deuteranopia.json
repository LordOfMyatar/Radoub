{
  "manifest_version": "1.0",
  "plugin": {
    "id": "org.parley.theme.deuteranopia",
    "name": "Deuteranopia (Red-Green Colorblind)",
    "version": "1.0.0",
    "author": "Parley Team",
    "description": "Accessibility theme for deuteranopia (most common form of red-green colorblindness). Uses blue/orange palette.",
    "type": "theme",
    "tags": ["official", "accessibility", "colorblind", "deuteranopia"]
  },
  "base_theme": "Light",
  "accessibility": {
    "type": "colorblind",
    "condition": "deuteranopia",
    "contrast_level": "AAA"
  },
  "colors": {
    "background": "#F8F8F8",
    "sidebar": "#EEEEEE",
    "text": "#000000",
    "selection": "#0066CC",
    "border": "#999999",
    "accent": "#0066CC",
    "error": "#CC3300",
    "warning": "#FF8800",
    "success": "#0088CC",
    "info": "#0066CC",
    "tree_entry": "#0066CC",
    "tree_reply": "#FF8800",
    "tree_link": "#9933CC",
    "button_primary": "#0066CC",
    "button_secondary": "#666666",
    "button_hover": "#004C99",
    "speaker_1": "#0066CC",
    "speaker_2": "#FF8800",
    "speaker_3": "#9933CC",
    "speaker_4": "#0088CC",
    "speaker_5": "#CC3300",
    "speaker_6": "#6600CC"
  },
  "fonts": {
    "primary": "$Default",
    "monospace": "Consolas",
    "size": 14,
    "weight": "Normal"
  },
  "spacing": {
    "control_padding": 8,
    "control_margin": 4,
    "panel_spacing": 8,
    "min_control_height": 28,
    "tree_indent": 16
  }
}
