{
  "manifest_version": "1.0",
  "plugin": {
    "id": "org.parley.theme.tritanopia",
    "name": "Tritanopia (Blue-Yellow Colorblind)",
    "version": "1.0.0",
    "author": "Parley Team",
    "description": "Accessibility theme for tritanopia (blue-yellow colorblindness). Uses red/magenta vs dark teal palette.",
    "type": "theme",
    "tags": ["official", "accessibility", "colorblind", "tritanopia"]
  },
  "base_theme": "Light",
  "accessibility": {
    "type": "colorblind",
    "condition": "tritanopia",
    "contrast_level": "AAA"
  },
  "colors": {
    "background": "#DDDDDD",
    "sidebar": "#AAAAAA",
    "text": "#000000",
    "selection": "#CC0066",
    "border": "#999999",
    "accent": "#CC0066",
    "error": "#990033",
    "warning": "#994400",
    "success": "#2D6659",
    "info": "#2D6659",
    "tree_entry": "#B30059",
    "tree_reply": "#2D6659",
    "tree_link": "#663399",
    "title_bar": "#CCCCCC",
    "title_bar_foreground": "#000000",
    "button_primary": "#CC0066",
    "button_secondary": "#666666",
    "button_hover": "#990033",
    "edit_mode_border": "#2D6659",
    "edit_mode_unsaved": "#B30059",
    "edit_mode_saved": "#2D6659",
    "auto_trim_border": "#1D4D44",
    "spelling_error": "#990033",
    "speaker_1": "#2D6659",
    "speaker_2": "#B30059",
    "speaker_3": "#663399",
    "speaker_4": "#1D4D44",
    "speaker_5": "#990033",
    "speaker_6": "#4D2673"
  },
  "fonts": {
    "primary": "$Default",
    "monospace": "Consolas",
    "size": 14,
    "weight": "Normal"
  },
  "spacing": {
    "control_padding": 8,
    "control_margin": 4,
    "panel_spacing": 8,
    "min_control_height": 28,
    "tree_indent": 16
  }
}
