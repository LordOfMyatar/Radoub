<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DialogEditor.Views.ScriptBrowserWindow"
        Title="Script Browser"
        AutomationProperties.AutomationId="ScriptBrowserWindow"
        MinWidth="900" MinHeight="500"
        Width="1000" Height="600"
        SizeToContent="Manual"
        WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <!-- Dark mode selection visibility fix -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Location Override Row -->
        <Grid Grid.Row="0" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Location:"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       FontSize="11"/>
            <TextBlock Grid.Column="1"
                       x:Name="LocationPathLabel"
                       Text="(auto-detected)"
                       VerticalAlignment="Center"
                       FontSize="11"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       TextTrimming="CharacterEllipsis"/>
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5">
                <Button x:Name="ResetLocationButton"
                        Content="reset"
                        FontSize="11"
                        Padding="8,2"
                        IsVisible="False"
                        Click="OnResetLocationClick"/>
                <Button x:Name="BrowseLocationButton"
                        Content="browse..."
                        FontSize="11"
                        Padding="8,2"
                        Click="OnBrowseLocationClick"/>
            </StackPanel>
        </Grid>

        <!-- Search Box and Source Toggles -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     x:Name="SearchBox"
                     AutomationProperties.AutomationId="ScriptSearchBox"
                     Watermark="Type to filter scripts..."
                     Margin="0,0,10,0"
                     TextChanged="OnSearchTextChanged"/>

            <CheckBox Grid.Column="1"
                      x:Name="ShowHakCheckBox"
                      Content="ðŸ“¦ Show HAK"
                      ToolTip.Tip="Show scripts from HAK files in module and user hak folder"
                      VerticalAlignment="Center"
                      IsChecked="False"
                      Margin="0,0,10,0"
                      Checked="OnShowHakChanged"
                      Unchecked="OnShowHakChanged"/>

            <CheckBox Grid.Column="2"
                      x:Name="ShowBuiltInCheckBox"
                      Content="ðŸŽ® Show built-in"
                      ToolTip.Tip="Show built-in game scripts from base game (requires game path in Settings)"
                      VerticalAlignment="Center"
                      IsChecked="False"
                      Checked="OnShowBuiltInChanged"
                      Unchecked="OnShowBuiltInChanged"/>
        </Grid>

        <!-- Main Content Area: Script List + Preview -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Script List -->
            <Border Grid.Column="0" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Script Count Header -->
                    <TextBlock Grid.Row="0" x:Name="ScriptCountLabel"
                               Text="0 scripts"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <!-- Scripts ListBox -->
                    <ListBox Grid.Row="1" x:Name="ScriptListBox"
                             AutomationProperties.AutomationId="ScriptListBox"
                             SelectionChanged="OnScriptSelected"
                             DoubleTapped="OnScriptDoubleClicked">
                        <!-- Populated dynamically -->
                    </ListBox>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" Background="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                          ResizeDirection="Columns"/>

            <!-- Script Preview Pane -->
            <Border Grid.Column="2" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Header -->
                    <TextBlock Grid.Row="0" x:Name="PreviewHeaderLabel"
                               Text="Script Preview"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <!-- Preview TextBox (read-only, monospace) -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="PreviewTextBox"
                                 AutomationProperties.AutomationId="ScriptPreviewTextBox"
                                 IsReadOnly="True"
                                 TextWrapping="NoWrap"
                                 FontFamily="Consolas,Courier New,monospace"
                                 AcceptsReturn="True"
                                 BorderThickness="0"
                                 Background="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Selected Script Display -->
        <Border Grid.Row="3"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="1"
                Padding="10"
                Margin="0,10,0,10"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Selected:"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           x:Name="SelectedScriptLabel"
                           Text="(none)"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button x:Name="OpenInEditorButton"
                    Content="Open in Editor"
                    Width="120"
                    Click="OnOpenInEditorClick"
                    IsEnabled="False"/>
            <Button Content="OK"
                    Width="80"
                    Click="OnOkClick"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="OnCancelClick"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
