<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DialogEditor.Views.ScriptBrowserWindow"
        Title="Script Browser"
        MinWidth="900" MinHeight="500"
        Width="1000" Height="600"
        SizeToContent="Manual"
        WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <!-- Dark mode selection visibility fix -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <TextBox Grid.Row="0"
                 x:Name="SearchBox"
                 Watermark="Type to filter scripts..."
                 Margin="0,0,0,10"
                 TextChanged="OnSearchTextChanged"/>

        <!-- Main Content Area: Script List + Preview -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Script List -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Script Count Header -->
                    <TextBlock Grid.Row="0" x:Name="ScriptCountLabel"
                               Text="0 scripts"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <!-- Scripts ListBox -->
                    <ListBox Grid.Row="1" x:Name="ScriptListBox"
                             SelectionChanged="OnScriptSelected"
                             DoubleTapped="OnScriptDoubleClicked">
                        <!-- Populated dynamically -->
                    </ListBox>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" Background="LightGray"
                          ResizeDirection="Columns"/>

            <!-- Script Preview Pane -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Header -->
                    <TextBlock Grid.Row="0" x:Name="PreviewHeaderLabel"
                               Text="Script Preview"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <!-- Preview TextBox (read-only, monospace) -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="PreviewTextBox"
                                 IsReadOnly="True"
                                 TextWrapping="NoWrap"
                                 FontFamily="Consolas,Courier New,monospace"
                                 AcceptsReturn="True"
                                 BorderThickness="0"
                                 Background="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Selected Script Display -->
        <Border Grid.Row="2"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="1"
                Padding="10"
                Margin="0,10,0,10"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Selected:"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           x:Name="SelectedScriptLabel"
                           Text="(none)"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button x:Name="OpenInEditorButton"
                    Content="Open in Editor"
                    Width="120"
                    Click="OnOpenInEditorClick"
                    IsEnabled="False"/>
            <Button Content="OK"
                    Width="80"
                    Click="OnOkClick"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="OnCancelClick"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
