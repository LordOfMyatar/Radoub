<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DialogEditor.Views.ParameterBrowserWindow"
        Title="Parameter Browser"
        Width="700" Height="500"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <!-- Dark mode selection visibility fix -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Information -->
        <TextBlock Grid.Row="0" x:Name="HeaderText"
                   FontWeight="Bold" FontSize="14" Margin="0,0,0,5"
                   Text="Available Parameters"/>

        <TextBlock Grid.Row="1" x:Name="ScriptNameText"
                   FontStyle="Italic" Margin="0,0,0,10"
                   Text="No script loaded"/>

        <!-- Main Content Area: Keys and Values -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Parameter Keys List -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Parameter Keys" FontWeight="Bold" Margin="0,0,0,5"/>

                    <Grid Grid.Row="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListBox x:Name="KeysList"
                                     SelectionMode="Single"
                                     SelectionChanged="OnKeySelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   FontFamily="Consolas,Courier New,monospace"
                                                   ToolTip.Tip="Click to see available values"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>

                        <!-- Empty state message -->
                        <TextBlock x:Name="NoKeysMessage"
                                   Text="No parameters available"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   IsVisible="False"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" ResizeDirection="Columns" Background="Gray"/>

            <!-- Parameter Values List -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" x:Name="ValuesHeaderText"
                               Text="Values for Selected Key" FontWeight="Bold" Margin="0,0,0,5"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="ValuesList"
                                 SelectionMode="Single"
                                 SelectionChanged="OnValueSelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontFamily="Consolas,Courier New,monospace"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <TextBlock Grid.Row="2" x:Name="ValueCountText"
                               FontStyle="Italic" FontSize="11" Margin="0,5,0,0"
                               HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Button Panel -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="RefreshJournalButton"
                    Content="Refresh Journal Cache"
                    Click="OnRefreshJournalClick"
                    Margin="0,0,10,0"
                    ToolTip.Tip="Reload journal data from module.jrl"/>
            <Button x:Name="CopyKeyButton"
                    Content="Copy Key"
                    Click="OnCopyKeyClick"
                    IsEnabled="False"
                    Margin="0,0,5,0"/>
            <Button x:Name="CopyValueButton"
                    Content="Copy Value"
                    Click="OnCopyValueClick"
                    IsEnabled="False"
                    Margin="0,0,5,0"/>
            <Button x:Name="AddParameterButton"
                    Content="Add Parameter"
                    Click="OnAddParameterClick"
                    IsEnabled="False"
                    Margin="0,0,10,0"/>
            <Button Content="Close" Click="OnCloseClick"/>
        </StackPanel>
    </Grid>
</Window>