<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DialogEditor.Views.ParameterBrowserWindow"
        Title="Parameter Browser"
        MinWidth="800" MinHeight="400"
        Width="900" Height="500"
        SizeToContent="Manual"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ThemeBackground}"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        ExtendClientAreaTitleBarHeightHint="30">

    <Window.Styles>
        <!-- Dark mode selection visibility fix -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="{DynamicResource ThemeTitleBar}"
                x:Name="TitleBar"
                PointerPressed="OnTitleBarPointerPressed"
                DoubleTapped="OnTitleBarDoubleTapped">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        IsHitTestVisible="False">
                <TextBlock Text="Parameter Browser"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource ThemeTitleBarForeground}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Information -->
            <TextBlock Grid.Row="0" x:Name="HeaderText"
                   FontWeight="Bold" Margin="0,0,0,5"
                   Text="Available Parameters"/>

        <TextBlock Grid.Row="1" x:Name="ScriptNameText"
                   FontStyle="Italic" Margin="0,0,0,10"
                   Text="No script loaded"/>

        <!-- Main Content Area: Keys and Values -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Parameter Keys List -->
            <Border Grid.Column="0" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Parameter Keys" FontWeight="Bold" Margin="0,0,0,5"/>

                    <Grid Grid.Row="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListBox x:Name="KeysList"
                                     SelectionMode="Single"
                                     SelectionChanged="OnKeySelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   FontFamily="Consolas,Courier New,monospace"
                                                   ToolTip.Tip="Click to see available values"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>

                        <!-- Empty state message -->
                        <TextBlock x:Name="NoKeysMessage"
                                   Text="No parameters available"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   IsVisible="False"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" ResizeDirection="Columns" Background="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

            <!-- Parameter Values List -->
            <Border Grid.Column="2" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" x:Name="ValuesHeaderText"
                               Text="Values for Selected Key" FontWeight="Bold" Margin="0,0,0,5"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="ValuesList"
                                 SelectionMode="Single"
                                 SelectionChanged="OnValueSelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontFamily="Consolas,Courier New,monospace"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <TextBlock Grid.Row="2" x:Name="ValueCountText"
                               FontStyle="Italic" Margin="0,5,0,0"
                               HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Button Panel -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left side: Cache controls -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <CheckBox x:Name="EnableCacheCheckBox"
                          Content="Enable Cache"
                          Checked="OnEnableCacheChanged"
                          Unchecked="OnEnableCacheChanged"
                          Margin="0,0,10,0"
                          ToolTip.Tip="Show/hide recently used parameter values"/>
                <Button Content="Clear Cache"
                        Click="OnClearCacheClick"
                        Margin="0,0,10,0"
                        ToolTip.Tip="Clear cached values for this script"/>
                <Button x:Name="RefreshJournalButton"
                        Content="Refresh Journal"
                        Click="OnRefreshJournalClick"
                        ToolTip.Tip="Reload journal data from module.jrl"/>
            </StackPanel>

            <!-- Right side: Action buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CopyKeyButton"
                        Content="Copy Key"
                        Click="OnCopyKeyClick"
                        IsEnabled="False"
                        Margin="0,0,5,0"/>
                <Button x:Name="CopyValueButton"
                        Content="Copy Value"
                        Click="OnCopyValueClick"
                        IsEnabled="False"
                        Margin="0,0,5,0"/>
                <Button x:Name="AddParameterButton"
                        Content="Add Parameter"
                        Click="OnAddParameterClick"
                        IsEnabled="False"
                        Margin="0,0,10,0"/>
                <Button Content="Close" Click="OnCloseClick"/>
            </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>