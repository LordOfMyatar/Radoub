<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DialogEditor.Views.SoundBrowserWindow"
        Title="Sound Browser"
        Width="700" Height="500"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <!-- Dark mode selection visibility fix -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" x:Name="SearchBox"
                     Watermark="Type to filter sounds..."
                     TextChanged="OnSearchTextChanged"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Category TreeView -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="Categories" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListBox x:Name="CategoryListBox" SelectionChanged="OnCategorySelected">
                            <ListBoxItem Content="Ambient"/>
                            <ListBoxItem Content="Dialog"/>
                            <ListBoxItem Content="Music"/>
                            <ListBoxItem Content="Soundset"/>
                            <Separator Margin="0,5"/>
                            <ListBoxItem Content="Recent" FontStyle="Italic"/>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" Background="LightGray"
                          ResizeDirection="Columns"/>

            <!-- Sound Files List -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- File Count Header -->
                    <TextBlock Grid.Row="0" x:Name="FileCountLabel"
                               Text="0 sounds"
                               Margin="0,0,0,5"/>

                    <!-- Files ListBox -->
                    <ListBox Grid.Row="1" x:Name="SoundListBox"
                             SelectionChanged="OnSoundSelected"
                             DoubleTapped="OnSoundDoubleClicked">
                        <!-- Populated dynamically -->
                    </ListBox>

                    <!-- Preview Controls -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal"
                                Margin="0,10,0,0" Spacing="10">
                        <Button x:Name="PlayButton"
                                Content="▶ Play"
                                Width="80"
                                Click="OnPlayClick"
                                IsEnabled="False"/>
                        <Button x:Name="StopButton"
                                Content="⏹ Stop"
                                Width="80"
                                Click="OnStopClick"
                                IsEnabled="False"/>
                        <TextBlock x:Name="CurrentSoundLabel"
                                   Text=""
                                   VerticalAlignment="Center"
                                   Foreground="Gray"
                                   TextWrapping="Wrap"
                                   MaxWidth="350"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Selected Sound Display -->
        <Border Grid.Row="2"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="1"
                Padding="10"
                Margin="0,10,0,10"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Selected:"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           x:Name="SelectedSoundLabel"
                           Text="(none)"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="OK"
                    Width="80"
                    Click="OnOkClick"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="OnCancelClick"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
