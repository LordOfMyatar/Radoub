<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DialogEditor.Views.SoundBrowserWindow"
        Title="Sound Browser"
        AutomationProperties.AutomationId="SoundBrowserWindow"
        Width="600" Height="500"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ThemeBackground}">

    <Window.Styles>
        <!-- Dark mode selection visibility fix -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Source Selection Row -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5" Spacing="15">
            <TextBlock Text="Sources:"
                       VerticalAlignment="Center"
                       FontSize="11"/>
            <CheckBox x:Name="IncludeGameResourcesCheckBox"
                      Content="Game resources"
                      FontSize="11"
                      IsChecked="False"
                      ToolTip.Tip="Include sounds from base game folders"
                      Checked="OnSourceSelectionChanged"
                      Unchecked="OnSourceSelectionChanged"/>
            <CheckBox x:Name="IncludeHakFolderCheckBox"
                      Content="HAK files"
                      FontSize="11"
                      IsChecked="False"
                      ToolTip.Tip="Include sounds from HAK files in dialog directory"
                      Checked="OnSourceSelectionChanged"
                      Unchecked="OnSourceSelectionChanged"/>
            <CheckBox x:Name="IncludeBifFilesCheckBox"
                      Content="BIF archives"
                      FontSize="11"
                      IsChecked="False"
                      ToolTip.Tip="Include base game sounds from BIF archives (slower)"
                      Checked="OnSourceSelectionChanged"
                      Unchecked="OnSourceSelectionChanged"/>
            <CheckBox x:Name="IncludeOtherLocationCheckBox"
                      Content="Other location"
                      FontSize="11"
                      IsChecked="False"
                      ToolTip.Tip="Browse for sounds in a custom folder"
                      Checked="OnOtherLocationToggled"
                      Unchecked="OnOtherLocationToggled"/>
            <Button x:Name="BrowseLocationButton"
                    Content="browse..."
                    FontSize="11"
                    Padding="8,2"
                    IsEnabled="False"
                    Click="OnBrowseLocationClick"/>
            <TextBlock x:Name="OtherLocationLabel"
                       Text=""
                       VerticalAlignment="Center"
                       FontSize="10"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       TextTrimming="CharacterEllipsis"
                       MaxWidth="150"/>
        </StackPanel>

        <!-- Filter Row -->
        <Grid Grid.Row="1" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="0"
                      x:Name="MonoOnlyCheckBox"
                      Content="Mono only"
                      FontSize="11"
                      IsChecked="True"
                      ToolTip.Tip="Show only mono sounds (conversation-compatible)"
                      Checked="OnMonoFilterChanged"
                      Unchecked="OnMonoFilterChanged"/>
            <CheckBox Grid.Column="1"
                      x:Name="DisableValidationCheckBox"
                      Content="Skip HAK validation"
                      FontSize="11"
                      Margin="15,0,0,0"
                      ToolTip.Tip="Disable on-selection format validation for HAK sounds (faster for large HAK collections)"/>
            <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="10">
                <TextBlock Text="ðŸŽ® = BIF"
                           FontSize="10"
                           VerticalAlignment="Center"/>
                <TextBlock Text="ðŸ“¦ = HAK"
                           FontSize="10"
                           Foreground="LightBlue"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Search Box -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" x:Name="SearchBox"
                     AutomationProperties.AutomationId="SoundSearchBox"
                     Watermark="Type to filter sounds..."
                     TextChanged="OnSearchTextChanged"/>
        </Grid>

        <!-- Sound Files List -->
        <Border Grid.Row="3" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- File Count Header / Status -->
                <TextBlock Grid.Row="0" x:Name="FileCountLabel"
                           Text="0 sounds"
                           TextWrapping="Wrap"
                           MaxHeight="40"
                           Margin="0,0,0,5"/>

                <!-- Files ListBox -->
                <ListBox Grid.Row="1" x:Name="SoundListBox"
                         AutomationProperties.AutomationId="SoundListBox"
                         SelectionChanged="OnSoundSelected"
                         DoubleTapped="OnSoundDoubleClicked">
                    <!-- Populated dynamically -->
                </ListBox>

                <!-- Preview Controls -->
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                            Margin="0,10,0,0" Spacing="10">
                    <Button x:Name="PlayButton"
                            AutomationProperties.AutomationId="SoundPlayButton"
                            Content="â–¶ Play"
                            Width="80"
                            Click="OnPlayClick"
                            IsEnabled="False"/>
                    <Button x:Name="StopButton"
                            AutomationProperties.AutomationId="SoundStopButton"
                            Content="â¹ Stop"
                            Width="80"
                            Click="OnStopClick"
                            IsEnabled="False"/>
                    <TextBlock x:Name="CurrentSoundLabel"
                               Text=""
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               TextWrapping="Wrap"
                               MaxWidth="350"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Selected Sound Display -->
        <Border Grid.Row="4"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="1"
                Padding="10"
                Margin="0,10,0,10"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Selected:"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           x:Name="SelectedSoundLabel"
                           Text="(none)"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="OK"
                    Width="80"
                    Click="OnOkClick"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="OnCancelClick"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
