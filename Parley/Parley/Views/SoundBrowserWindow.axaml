<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DialogEditor.Views.SoundBrowserWindow"
        Title="Sound Browser"
        Width="600" Height="500"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <!-- Dark mode selection visibility fix -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Location Override Row -->
        <Grid Grid.Row="0" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Location:"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       FontSize="11"/>
            <TextBlock Grid.Column="1"
                       x:Name="LocationPathLabel"
                       Text="(auto-detected)"
                       VerticalAlignment="Center"
                       FontSize="11"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       TextTrimming="CharacterEllipsis"/>
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5">
                <Button x:Name="ResetLocationButton"
                        Content="reset"
                        FontSize="11"
                        Padding="8,2"
                        IsVisible="False"
                        Click="OnResetLocationClick"/>
                <Button x:Name="BrowseLocationButton"
                        Content="browse..."
                        FontSize="11"
                        Padding="8,2"
                        Click="OnBrowseLocationClick"/>
            </StackPanel>
        </Grid>

        <!-- Filter Row -->
        <Grid Grid.Row="1" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="0"
                      x:Name="MonoOnlyCheckBox"
                      Content="Show only mono (conversation-compatible)"
                      FontSize="11"
                      IsChecked="True"
                      Checked="OnMonoFilterChanged"
                      Unchecked="OnMonoFilterChanged"/>
            <TextBlock Grid.Column="2"
                       Text="ðŸ“¦ = from HAK file"
                       FontSize="10"
                       Foreground="LightBlue"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Search Box -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" x:Name="SearchBox"
                     Watermark="Type to filter sounds..."
                     TextChanged="OnSearchTextChanged"/>
        </Grid>

        <!-- Sound Files List -->
        <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- File Count Header -->
                <TextBlock Grid.Row="0" x:Name="FileCountLabel"
                           Text="0 sounds"
                           Margin="0,0,0,5"/>

                <!-- Files ListBox -->
                <ListBox Grid.Row="1" x:Name="SoundListBox"
                         SelectionChanged="OnSoundSelected"
                         DoubleTapped="OnSoundDoubleClicked">
                    <!-- Populated dynamically -->
                </ListBox>

                <!-- Preview Controls -->
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                            Margin="0,10,0,0" Spacing="10">
                    <Button x:Name="PlayButton"
                            Content="â–¶ Play"
                            Width="80"
                            Click="OnPlayClick"
                            IsEnabled="False"/>
                    <Button x:Name="StopButton"
                            Content="â¹ Stop"
                            Width="80"
                            Click="OnStopClick"
                            IsEnabled="False"/>
                    <TextBlock x:Name="CurrentSoundLabel"
                               Text=""
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               TextWrapping="Wrap"
                               MaxWidth="350"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Selected Sound Display -->
        <Border Grid.Row="4"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="1"
                Padding="10"
                Margin="0,10,0,10"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Selected:"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           x:Name="SelectedSoundLabel"
                           Text="(none)"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="OK"
                    Width="80"
                    Click="OnOkClick"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="OnCancelClick"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
