<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Radoub.UI.Views.AboutWindow"
        Title="About"
        Width="500" Height="480"
        MinHeight="350"
        MinWidth="400"
        WindowStartupLocation="CenterOwner">

    <DockPanel>
        <!-- Close Button - Fixed at bottom -->
        <Button DockPanel.Dock="Bottom"
                Content="Close"
                HorizontalAlignment="Center"
                Width="100"
                Click="OnCloseClick"
                Margin="0,10,0,20"/>

        <!-- Scrollable content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="30,30,30,0">
            <StackPanel Spacing="5" HorizontalAlignment="Center">
                <!-- App Icon -->
                <Image x:Name="AppIcon"
                       Width="64" Height="64"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                <!-- App Name -->
                <TextBlock x:Name="AppNameText"
                           Text="Tool Name"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <!-- Subtitle -->
                <TextBlock x:Name="SubtitleText"
                           Text="Part of the Radoub Toolset"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,0,0,10"/>

                <!-- Author -->
                <TextBlock Text="by Lord"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <!-- GitHub Link -->
                <TextBlock x:Name="GitHubLinkText"
                           Text="https://github.com/LordOfMyatar/Radoub"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Foreground="Blue"
                           TextDecorations="Underline"
                           Cursor="Hand"
                           PointerPressed="OnGitHubLinkClick"/>

                <!-- Version -->
                <TextBlock x:Name="VersionText"
                           Text="Version 0.1.0"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                <!-- Additional Info (optional, tool-specific) -->
                <TextBlock x:Name="AdditionalInfoText"
                           Text=""
                           FontSize="13"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,10,0,0"
                           IsVisible="False"/>

                <!-- Special Thanks -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        BorderThickness="0,1,0,0"
                        Padding="0,15,0,0"
                        Margin="0,15,0,0">
                    <TextBlock Text="Special thanks to the&#x0a;Neverwinter Nights modding community"
                               FontSize="13"
                               TextAlignment="Center"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
