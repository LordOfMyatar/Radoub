<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Radoub.UI.Views.TokenSelectorWindow"
        Title="Select Token"
        Width="450" Height="500"
        MinWidth="350" MinHeight="400"
        WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <!-- Dark mode selection visibility fix -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tab Control -->
        <TabControl Grid.Row="0" x:Name="TokenTabControl" SelectionChanged="OnTabSelectionChanged">
            <!-- Standard Tokens Tab -->
            <TabItem Header="Standard">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Token List -->
                    <ListBox Grid.Column="0" x:Name="StandardTokenListBox"
                             SelectionChanged="OnStandardTokenSelected"
                             DoubleTapped="OnTokenDoubleClicked"
                             Margin="0,0,5,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="2"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Example Panel -->
                    <Border Grid.Column="1"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="1"
                            Padding="10" Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Example" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="StandardExampleText"
                                       Text="Well hello little &lt;Boy/Girl&gt;."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Result:" FontWeight="Bold" Margin="0,10,0,5"/>
                            <TextBlock x:Name="StandardExampleResult"
                                       Text="Well hello little Boy."
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SystemAccentColor}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Highlight Tokens Tab -->
            <TabItem Header="Highlight">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Action Radio -->
                    <RadioButton Grid.Row="0" x:Name="ActionRadio"
                                 GroupName="HighlightType"
                                 IsChecked="True"
                                 Margin="0,5"
                                 Checked="OnHighlightTypeChanged">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Action" FontWeight="Bold" Foreground="#00FF00" Width="80"/>
                            <TextBlock Text="[Character actions]" Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                        </StackPanel>
                    </RadioButton>

                    <!-- Text input for Action -->
                    <TextBox Grid.Row="1" x:Name="ActionTextBox"
                             Watermark="Enter action text (e.g., Chef waves)"
                             Margin="20,0,0,10"
                             TextChanged="OnHighlightTextChanged"/>

                    <!-- Highlight Radio -->
                    <RadioButton Grid.Row="2" x:Name="HighlightRadio"
                                 GroupName="HighlightType"
                                 Margin="0,5"
                                 Checked="OnHighlightTypeChanged">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Highlight" FontWeight="Bold" Foreground="#0080FF" Width="80"/>
                            <TextBlock Text="[Important text]" Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                        </StackPanel>
                    </RadioButton>

                    <!-- Skill Check Radio -->
                    <RadioButton Grid.Row="3" x:Name="CheckRadio"
                                 GroupName="HighlightType"
                                 Margin="0,5"
                                 Checked="OnHighlightTypeChanged">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Skill Check" FontWeight="Bold" Foreground="#FF0000" Width="80"/>
                            <ComboBox x:Name="SkillCheckComboBox" Width="150" Margin="10,0,0,0"
                                      SelectionChanged="OnSkillCheckChanged">
                                <ComboBoxItem Content="Animal Empathy"/>
                                <ComboBoxItem Content="Appraise"/>
                                <ComboBoxItem Content="Bluff"/>
                                <ComboBoxItem Content="Concentration"/>
                                <ComboBoxItem Content="Diplomacy"/>
                                <ComboBoxItem Content="Disable Trap"/>
                                <ComboBoxItem Content="Discipline"/>
                                <ComboBoxItem Content="Heal"/>
                                <ComboBoxItem Content="Hide"/>
                                <ComboBoxItem Content="Intimidate"/>
                                <ComboBoxItem Content="Listen"/>
                                <ComboBoxItem Content="Lore"/>
                                <ComboBoxItem Content="Move Silently"/>
                                <ComboBoxItem Content="Open Lock"/>
                                <ComboBoxItem Content="Parry"/>
                                <ComboBoxItem Content="Perform"/>
                                <ComboBoxItem Content="Persuade"/>
                                <ComboBoxItem Content="Pick Pocket"/>
                                <ComboBoxItem Content="Search"/>
                                <ComboBoxItem Content="Set Trap"/>
                                <ComboBoxItem Content="Spellcraft"/>
                                <ComboBoxItem Content="Spot"/>
                                <ComboBoxItem Content="Taunt"/>
                                <ComboBoxItem Content="Tumble"/>
                                <ComboBoxItem Content="Use Magic Device"/>
                            </ComboBox>
                        </StackPanel>
                    </RadioButton>

                    <!-- Preview -->
                    <Border Grid.Row="4"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="1"
                            Padding="10" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Preview" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="HighlightPreviewRaw"
                                       Text="&lt;StartAction&gt;[Chef waves]&lt;/Start&gt;"
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                       FontFamily="Consolas"
                                       FontSize="11"/>
                            <TextBlock x:Name="HighlightPreviewFormatted"
                                       Text="[Chef waves]"
                                       TextWrapping="Wrap"
                                       Foreground="#00FF00"
                                       FontWeight="Medium"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Custom Colors Tab -->
            <TabItem Header="Custom Colors">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Info Text -->
                    <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,10"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" FontSize="11">
                        Custom color tokens require matching SetCustomToken() calls in your module scripts.
                        Configure colors in ~/Radoub/token-colors.json
                    </TextBlock>

                    <!-- Color List -->
                    <ListBox Grid.Row="1" x:Name="ColorListBox"
                             SelectionChanged="OnColorSelected"
                             DoubleTapped="OnTokenDoubleClicked">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Color swatch -->
                                    <Border Grid.Column="0"
                                            Width="16" Height="16"
                                            CornerRadius="2"
                                            Background="{Binding HexColor}"
                                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="1"/>

                                    <!-- Color name -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Name}"
                                               Margin="10,0,0,0"
                                               VerticalAlignment="Center"/>

                                    <!-- Token preview -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding OpenToken}"
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                               FontFamily="Consolas"
                                               FontSize="10"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Preview -->
                    <Border Grid.Row="2"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="1"
                            Padding="10" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Preview" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="ColorPreviewRaw"
                                       Text="Select a color"
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                       FontFamily="Consolas"
                                       FontSize="11"/>
                            <TextBlock x:Name="ColorPreviewSample"
                                       Text="Sample Text"
                                       TextWrapping="Wrap"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Token Output -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                Padding="10"
                Margin="0,10,0,10"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Insert:"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBox Grid.Column="1"
                         x:Name="TokenOutputTextBox"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         Text=""/>
            </Grid>
        </Border>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="OK"
                    Width="80"
                    Click="OnOkClick"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="OnCancelClick"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
