<local:FileBrowserPanelBase xmlns="https://github.com/avaloniaui"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:local="clr-namespace:Radoub.UI.Controls"
                           x:Class="Radoub.UI.Controls.CreatureBrowserPanel"
                           HeaderTextContent="Creatures">

    <local:FileBrowserPanelBase.FilterOptionsContent>
        <StackPanel Spacing="4" Margin="0,4,0,0">
            <CheckBox x:Name="ShowModuleCheck"
                      Content="Module (.utc)"
                      IsChecked="True"/>
            <CheckBox x:Name="ShowLocalVaultCheck"
                      Content="Local Vault (.bic)"
                      IsChecked="True"/>
            <CheckBox x:Name="ShowServerVaultCheck"
                      Content="Server Vault (.bic)"
                      IsChecked="False"/>
        </StackPanel>
    </local:FileBrowserPanelBase.FilterOptionsContent>

</local:FileBrowserPanelBase>
