{
  "manifest_version": "1.0",
  "plugin": {
    "id": "org.fence.theme.tritanopia",
    "name": "Tritanopia (Blue-Yellow Colorblind)",
    "version": "1.0.0",
    "author": "Radoub Team",
    "description": "Accessibility theme for tritanopia (blue-yellow colorblindness). Uses red/cyan palette.",
    "type": "theme",
    "tags": ["official", "accessibility", "colorblind", "tritanopia"]
  },
  "base_theme": "Light",
  "accessibility": {
    "type": "colorblind",
    "condition": "tritanopia",
    "contrast_level": "AAA"
  },
  "colors": {
    "background": "#E5E5E5",
    "sidebar": "#C0C0C0",
    "text": "#000000",
    "selection": "#CC3366",
    "border": "#A0A0A0",
    "accent": "#CC3366",
    "error": "#CC0033",
    "warning": "#990066",
    "success": "#009999",
    "info": "#CC3366",
    "disabled": "#808080",
    "title_bar": "#D0D0D0",
    "title_bar_foreground": "#000000",
    "button_primary": "#CC3366",
    "button_secondary": "#808080",
    "button_hover": "#992244"
  },
  "fonts": {
    "primary": "$Default",
    "monospace": "Consolas",
    "size": 14,
    "weight": "Normal"
  },
  "spacing": {
    "control_padding": 8,
    "control_margin": 4,
    "panel_spacing": 8,
    "min_control_height": 28
  }
}
