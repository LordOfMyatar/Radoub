{
  "manifest_version": "1.0",
  "plugin": {
    "id": "org.fence.theme.protanopia",
    "name": "Protanopia (Red Colorblind)",
    "version": "1.0.0",
    "author": "Radoub Team",
    "description": "Accessibility theme for protanopia (red colorblindness). Avoids red-green distinctions.",
    "type": "theme",
    "tags": ["official", "accessibility", "colorblind", "protanopia"]
  },
  "base_theme": "Light",
  "accessibility": {
    "type": "colorblind",
    "condition": "protanopia",
    "contrast_level": "AAA"
  },
  "colors": {
    "background": "#E0E0E0",
    "sidebar": "#B0B0B0",
    "text": "#000000",
    "selection": "#0055AA",
    "border": "#909090",
    "accent": "#0055AA",
    "error": "#CC6600",
    "warning": "#AA7700",
    "success": "#0077AA",
    "info": "#0055AA",
    "disabled": "#707070",
    "title_bar": "#C0C0C0",
    "title_bar_foreground": "#000000",
    "button_primary": "#0055AA",
    "button_secondary": "#707070",
    "button_hover": "#003D7A"
  },
  "fonts": {
    "primary": "$Default",
    "monospace": "Consolas",
    "size": 14,
    "weight": "Normal"
  },
  "spacing": {
    "control_padding": 8,
    "control_margin": 4,
    "panel_spacing": 8,
    "min_control_height": 28
  }
}
