<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RadoubLauncher.ViewModels"
        x:Class="RadoubLauncher.Views.SettingsWindow"
        x:DataType="vm:SettingsWindowViewModel"
        Title="Settings - Trebuchet"
        Width="600" Height="500"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:SettingsWindowViewModel/>
    </Design.DataContext>

    <DockPanel Margin="16">
        <!-- Bottom Buttons -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8"
                    Margin="0,16,0,0">
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Padding="16,8"/>
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Padding="16,8"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24">
                <!-- Game Paths Section -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Game Paths"
                               FontSize="{DynamicResource FontSizeLarge}"
                               FontWeight="SemiBold"/>

                    <!-- Base Game Installation (Steam/GOG) -->
                    <StackPanel Margin="0,8,0,0" Spacing="4">
                        <TextBlock Text="Base Game Installation (Steam/GOG):"
                                   FontWeight="SemiBold"/>
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <TextBox Grid.Column="0"
                                     Text="{Binding GameInstallPath}"
                                     Watermark="Path to NWN installation (contains data\ folder)"
                                     Margin="0,0,8,0"/>
                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Command="{Binding BrowseGamePathCommand}"
                                    Margin="0,0,4,0"
                                    Padding="8,4"/>
                            <Button Grid.Column="2"
                                    Content="Auto-Detect"
                                    Command="{Binding AutoDetectGamePathCommand}"
                                    Padding="8,4"/>
                        </Grid>
                        <TextBlock Text="{Binding GameInstallValidation}"
                                   Foreground="{Binding GameInstallValidationColor}"
                                   FontSize="{DynamicResource FontSizeSmall}"
                                   IsVisible="{Binding HasGameInstallValidation}"/>
                    </StackPanel>

                    <!-- NWN Documents (User Data) -->
                    <StackPanel Margin="0,8,0,0" Spacing="4">
                        <TextBlock Text="NWN Documents (User Data):"
                                   FontWeight="SemiBold"/>
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <TextBox Grid.Column="0"
                                     Text="{Binding NwnDocumentsPath}"
                                     Watermark="Path to Documents\Neverwinter Nights"
                                     Margin="0,0,8,0"/>
                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Command="{Binding BrowseDocumentsPathCommand}"
                                    Margin="0,0,4,0"
                                    Padding="8,4"/>
                            <Button Grid.Column="2"
                                    Content="Auto-Detect"
                                    Command="{Binding AutoDetectDocumentsPathCommand}"
                                    Padding="8,4"/>
                        </Grid>
                        <TextBlock Text="{Binding NwnDocumentsValidation}"
                                   Foreground="{Binding NwnDocumentsValidationColor}"
                                   FontSize="{DynamicResource FontSizeSmall}"
                                   IsVisible="{Binding HasNwnDocumentsValidation}"/>
                    </StackPanel>
                </StackPanel>

                <!-- TLK Settings Section -->
                <StackPanel Spacing="8">
                    <TextBlock Text="TLK Settings"
                               FontSize="{DynamicResource FontSizeLarge}"
                               FontWeight="SemiBold"/>

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" Margin="0,8,0,0">
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Language:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <ComboBox Grid.Row="0" Grid.Column="1"
                                  ItemsSource="{Binding AvailableLanguages}"
                                  SelectedItem="{Binding SelectedLanguage}"
                                  MinWidth="200"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Gender:"
                                   VerticalAlignment="Center"
                                   Margin="0,8,12,0"/>
                        <ComboBox Grid.Row="1" Grid.Column="1"
                                  ItemsSource="{Binding AvailableGenders}"
                                  SelectedItem="{Binding SelectedGender}"
                                  Margin="0,8,0,0"
                                  MinWidth="200"/>
                    </Grid>
                </StackPanel>

                <!-- Appearance Section -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Appearance"
                               FontSize="{DynamicResource FontSizeLarge}"
                               FontWeight="SemiBold"/>

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" Margin="0,8,0,0">
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Theme:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <ComboBox Grid.Row="0" Grid.Column="1"
                                  ItemsSource="{Binding AvailableThemes}"
                                  SelectedItem="{Binding SelectedTheme}"
                                  MinWidth="200"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Font Size:"
                                   VerticalAlignment="Center"
                                   Margin="0,8,12,0"/>
                        <StackPanel Grid.Row="1" Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    Margin="0,8,0,0">
                            <Slider Value="{Binding FontSizeScale}"
                                    Minimum="0.8"
                                    Maximum="1.5"
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="True"
                                    Width="200"/>
                            <TextBlock Text="{Binding FontSizePercentText}"
                                       VerticalAlignment="Center"
                                       Width="50"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Logging Section -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Logging"
                               FontSize="{DynamicResource FontSizeLarge}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Manage logs for all Radoub tools"
                               Opacity="0.7"
                               FontSize="{DynamicResource FontSizeSmall}"/>

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" Margin="0,8,0,0">
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Log Level:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <ComboBox Grid.Row="0" Grid.Column="1"
                                  ItemsSource="{Binding AvailableLogLevels}"
                                  SelectedItem="{Binding SelectedLogLevel}"
                                  MinWidth="200"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Session Retention:"
                                   VerticalAlignment="Center"
                                   Margin="0,8,12,0"/>
                        <StackPanel Grid.Row="1" Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    Margin="0,8,0,0">
                            <Slider Value="{Binding LogRetentionSessions}"
                                    Minimum="1"
                                    Maximum="10"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    Width="200"/>
                            <TextBlock Text="{Binding LogRetentionText}"
                                       VerticalAlignment="Center"
                                       Width="80"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    Margin="0,8,0,0">
                            <Button Content="Open Radoub Folder"
                                    Command="{Binding OpenLogFolderCommand}"
                                    Padding="8,4"/>
                            <Button Content="Cleanup Legacy Logs"
                                    Command="{Binding CleanupLegacyLogsCommand}"
                                    Padding="8,4"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Tool Paths Section (Read-Only Info) -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Detected Tools"
                               FontSize="{DynamicResource FontSizeLarge}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Tools are automatically detected. Run each tool once to register its location."
                               Opacity="0.7"
                               FontSize="{DynamicResource FontSizeSmall}"/>

                    <ItemsControl ItemsSource="{Binding DetectedTools}" Margin="0,8,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="120,*" Margin="0,2">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding StatusText}"
                                               Opacity="0.7"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
