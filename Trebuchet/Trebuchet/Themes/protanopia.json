{
  "manifest_version": "1.0",
  "plugin": {
    "id": "org.radoub.theme.protanopia",
    "name": "Protanopia (Red Colorblind)",
    "version": "1.0.0",
    "author": "Radoub Team",
    "description": "Accessibility theme for protanopia (red colorblindness). Uses blue/yellow palette with no red tones.",
    "type": "theme",
    "tags": ["official", "accessibility", "colorblind", "protanopia"]
  },
  "base_theme": "Light",
  "accessibility": {
    "type": "colorblind",
    "condition": "protanopia",
    "contrast_level": "AAA"
  },
  "colors": {
    "background": "#DDDDDD",
    "sidebar": "#AAAAAA",
    "text": "#000000",
    "selection": "#0066CC",
    "border": "#999999",
    "accent": "#0066CC",
    "error": "#CC6600",
    "warning": "#996600",
    "success": "#006699",
    "info": "#0066CC",
    "tree_entry": "#CC6600",
    "tree_reply": "#0066CC",
    "tree_link": "#666699",
    "title_bar": "#CCCCCC",
    "title_bar_foreground": "#000000",
    "button_primary": "#0066CC",
    "button_secondary": "#666666",
    "button_hover": "#004C99",
    "edit_mode_border": "#0066CC",
    "edit_mode_unsaved": "#CC6600",
    "edit_mode_saved": "#006699",
    "auto_trim_border": "#0066CC",
    "spelling_error": "#CC6600",
    "speaker_1": "#0066CC",
    "speaker_2": "#CC6600",
    "speaker_3": "#666699",
    "speaker_4": "#006699",
    "speaker_5": "#996600",
    "speaker_6": "#336699"
  },
  "fonts": {
    "primary": "$Default",
    "monospace": "Consolas",
    "size": 14,
    "weight": "Normal"
  },
  "spacing": {
    "control_padding": 8,
    "control_margin": 4,
    "panel_spacing": 8,
    "min_control_height": 28
  }
}
