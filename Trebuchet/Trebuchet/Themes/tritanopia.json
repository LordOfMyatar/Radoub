{
  "manifest_version": "1.0",
  "plugin": {
    "id": "org.radoub.theme.tritanopia",
    "name": "Tritanopia (Blue-Yellow Colorblind)",
    "version": "1.0.0",
    "author": "Radoub Team",
    "description": "Accessibility theme for tritanopia (blue-yellow colorblindness). Uses red/cyan palette.",
    "type": "theme",
    "tags": ["official", "accessibility", "colorblind", "tritanopia"]
  },
  "base_theme": "Light",
  "accessibility": {
    "type": "colorblind",
    "condition": "tritanopia",
    "contrast_level": "AAA"
  },
  "colors": {
    "background": "#DDDDDD",
    "sidebar": "#AAAAAA",
    "text": "#000000",
    "selection": "#CC3366",
    "border": "#999999",
    "accent": "#CC3366",
    "error": "#CC0000",
    "warning": "#CC6600",
    "success": "#009999",
    "info": "#CC3366",
    "tree_entry": "#CC6600",
    "tree_reply": "#009999",
    "tree_link": "#996666",
    "title_bar": "#CCCCCC",
    "title_bar_foreground": "#000000",
    "button_primary": "#CC3366",
    "button_secondary": "#666666",
    "button_hover": "#993355",
    "edit_mode_border": "#009999",
    "edit_mode_unsaved": "#CC6600",
    "edit_mode_saved": "#009999",
    "auto_trim_border": "#CC3366",
    "spelling_error": "#CC0000",
    "speaker_1": "#009999",
    "speaker_2": "#CC3366",
    "speaker_3": "#996666",
    "speaker_4": "#009999",
    "speaker_5": "#CC6600",
    "speaker_6": "#663366"
  },
  "fonts": {
    "primary": "$Default",
    "monospace": "Consolas",
    "size": 14,
    "weight": "Normal"
  },
  "spacing": {
    "control_padding": 8,
    "control_margin": 4,
    "panel_spacing": 8,
    "min_control_height": 28
  }
}
