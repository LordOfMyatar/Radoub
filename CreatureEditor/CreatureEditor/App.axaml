<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CreatureEditor.App"
             RequestedThemeVariant="Light">

    <Application.Styles>
        <FluentTheme />
        <!-- DataGrid requires explicit style inclusion -->
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        <!-- Radoub.UI control themes are loaded via MergedDictionaries below -->

        <!-- Theme-aware window background -->
        <Style Selector="Window">
            <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
        </Style>

        <!-- Global font styles -->
        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinHeight" Value="28"/>
        </Style>

        <Style Selector="MenuItem">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="ComboBox">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="CheckBox">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="TabControl">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <Style Selector="DataGrid">
            <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}"/>
            <Setter Property="FontFamily" Value="{DynamicResource GlobalFontFamily}"/>
        </Style>

        <!-- Scrollbar visibility - always visible -->
        <Style Selector="ScrollBar">
            <Setter Property="AllowAutoHide" Value="False"/>
        </Style>

        <Style Selector="ScrollBar:vertical">
            <Setter Property="Width" Value="18"/>
        </Style>

        <Style Selector="ScrollBar:horizontal">
            <Setter Property="Height" Value="18"/>
        </Style>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Radoub.UI control themes -->
                <ResourceInclude Source="avares://Radoub.UI/Controls/EquipmentSlotControl.axaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Default font size and family -->
            <x:Double x:Key="GlobalFontSize">14</x:Double>
            <FontFamily x:Key="GlobalFontFamily">$Default</FontFamily>

            <!-- Default theme background -->
            <SolidColorBrush x:Key="ThemeBackground">#FFFFFF</SolidColorBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>
