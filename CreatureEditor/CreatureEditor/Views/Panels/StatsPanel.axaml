<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="CreatureEditor.Views.Panels.StatsPanel">

    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <!-- Header -->
                <TextBlock Text="Character Stats"
                           FontSize="20"
                           FontWeight="Bold"/>

                <!-- Ability Scores Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Ability Scores" FontWeight="SemiBold" FontSize="14"/>

                        <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto">
                            <!-- Row 1 -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                <TextBlock Text="Strength" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="StrValue" Text="10" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,10">
                                <TextBlock Text="Dexterity" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="DexValue" Text="10" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Constitution" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="ConValue" Text="10" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Row 2 -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Intelligence" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="IntValue" Text="10" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Wisdom" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="WisValue" Text="10" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="2">
                                <TextBlock Text="Charisma" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="ChaValue" Text="10" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Combat Stats Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Combat" FontWeight="SemiBold" FontSize="14"/>

                        <Grid ColumnDefinitions="*,*,*,*">
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Hit Points" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="HpValue" Text="0 / 0" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Armor Class" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="AcValue" Text="10" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                <TextBlock Text="Base Attack" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="BabValue" Text="+0" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Challenge Rating" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="CrValue" Text="0" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Saving Throws Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Saving Throws" FontWeight="SemiBold" FontSize="14"/>

                        <Grid ColumnDefinitions="*,*,*">
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Fortitude" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="FortValue" Text="+0" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Reflex" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="RefValue" Text="+0" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Will" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="WillValue" Text="+0" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Placeholder message -->
                <TextBlock Text="Stats editing will be implemented in a future sprint."
                           FontSize="12"
                           FontStyle="Italic"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
