{
  "manifest_version": "1.0",
  "plugin": {
    "id": "org.quartermaster.theme.deuteranopia",
    "name": "Deuteranopia (Red-Green Colorblind)",
    "version": "1.0.0",
    "author": "Radoub Team",
    "description": "Accessibility theme for deuteranopia (most common form of red-green colorblindness). Uses blue/orange palette.",
    "type": "theme",
    "tags": ["official", "accessibility", "colorblind", "deuteranopia"]
  },
  "base_theme": "Light",
  "accessibility": {
    "type": "colorblind",
    "condition": "deuteranopia",
    "contrast_level": "AAA"
  },
  "colors": {
    "background": "#DDDDDD",
    "sidebar": "#AAAAAA",
    "text": "#000000",
    "selection": "#0066CC",
    "border": "#999999",
    "accent": "#0066CC",
    "error": "#CC3300",
    "warning": "#996600",
    "success": "#006699",
    "info": "#0066CC",
    "title_bar": "#CCCCCC",
    "title_bar_foreground": "#000000",
    "button_primary": "#0066CC",
    "button_secondary": "#666666",
    "button_hover": "#004C99"
  },
  "fonts": {
    "primary": "$Default",
    "monospace": "Consolas",
    "size": 14,
    "weight": "Normal"
  },
  "spacing": {
    "control_padding": 8,
    "control_margin": 4,
    "panel_spacing": 8,
    "min_control_height": 28
  }
}
