<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Quartermaster.Views.Dialogs.ClassBrowserWindow"
        Title="Select Class"
        AutomationProperties.AutomationId="ClassBrowserWindow"
        MinWidth="800" MinHeight="500"
        Width="900" Height="550"
        SizeToContent="Manual"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ThemeBackground}">

    <Window.Styles>
        <!-- Selection visibility fix for dark mode -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <!-- Disabled items are greyed out -->
        <Style Selector="ListBoxItem:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>
    </Window.Styles>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search and Filter Row -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     x:Name="SearchBox"
                     AutomationProperties.AutomationId="ClassSearchBox"
                     Watermark="Type to filter classes..."
                     Margin="0,0,10,0"
                     TextChanged="OnSearchTextChanged"/>

            <CheckBox Grid.Column="1"
                      x:Name="PlayerClassesOnlyCheckBox"
                      Content="Player classes only"
                      ToolTip.Tip="Hide NPC-only classes"
                      VerticalAlignment="Center"
                      IsChecked="True"
                      Margin="0,0,10,0"
                      Checked="OnFilterChanged"
                      Unchecked="OnFilterChanged"/>

            <CheckBox Grid.Column="2"
                      x:Name="ShowUnqualifiedCheckBox"
                      Content="Show unqualified prestige"
                      ToolTip.Tip="Show prestige classes even if prerequisites are not met"
                      VerticalAlignment="Center"
                      IsChecked="True"
                      Checked="OnFilterChanged"
                      Unchecked="OnFilterChanged"/>
        </Grid>

        <!-- Main Content: Class List + Details -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Class List Panel -->
            <Border Grid.Column="0" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Class Count Header -->
                    <TextBlock Grid.Row="0" x:Name="ClassCountLabel"
                               Text="0 classes"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <!-- Classes ListBox -->
                    <ListBox Grid.Row="1" x:Name="ClassListBox"
                             AutomationProperties.AutomationId="ClassListBox"
                             SelectionChanged="OnClassSelected"
                             DoubleTapped="OnClassDoubleClicked">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="{Binding DisplayIcon}" Width="16"/>
                                    <TextBlock Text="{Binding DisplayName}"/>
                                    <TextBlock Text="{Binding QualificationBadge}"
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                               FontStyle="Italic"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                          ResizeDirection="Columns"/>

            <!-- Class Details Panel -->
            <Border Grid.Column="2" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="1" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Class Name Header -->
                    <TextBlock Grid.Row="0" x:Name="ClassNameLabel"
                               Text="Select a class"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <!-- Class Stats Row -->
                    <StackPanel Grid.Row="1" x:Name="ClassStatsPanel" Orientation="Horizontal" Spacing="20" Margin="0,0,0,10" IsVisible="False">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Hit Die:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="HitDieLabel" Text="d8"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Skill Points:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="SkillPointsLabel" Text="2 + INT"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="5" x:Name="MaxLevelPanel" IsVisible="False">
                            <TextBlock Text="Max Level:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="MaxLevelLabel" Text="10"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Prerequisites Section (for prestige classes) -->
                    <Border Grid.Row="2" x:Name="PrerequisitesPanel"
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                            BorderThickness="1"
                            Padding="10"
                            Margin="0,0,0,10"
                            IsVisible="False">
                        <StackPanel>
                            <TextBlock Text="Prerequisites" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ItemsControl x:Name="PrerequisitesItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,2">
                                            <TextBlock Text="{Binding Icon}" Width="20"/>
                                            <TextBlock Text="{Binding Text}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Class Description -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="DescriptionTextBlock"
                                   TextWrapping="Wrap"
                                   Text="Select a class to view its description."
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Selected Class Display -->
        <Border Grid.Row="2"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                Padding="10"
                Margin="0,10,0,10"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Selected:"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           x:Name="SelectedClassLabel"
                           Text="(none)"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="80"
                    Click="OnOkClick"
                    IsEnabled="False"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="OnCancelClick"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
