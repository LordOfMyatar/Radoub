<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="Quartermaster.Views.Panels.SkillsPanel">

    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20,20,20,20">
        <Grid RowDefinitions="Auto,Auto,Auto,*,Auto">
            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Skills"
                       FontSize="{DynamicResource FontSizeXLarge}"
                       FontWeight="Bold"/>

            <!-- Skills Summary -->
            <TextBlock Grid.Row="1"
                       x:Name="SkillsSummaryText"
                       Text="0 skills with ranks"
                       FontSize="{DynamicResource FontSizeSmall}"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       Margin="0,5,0,10"/>

            <!-- Sort and Filter Controls -->
            <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto,Auto" Margin="0,0,0,10">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Sort by:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="SortComboBox"
                              SelectedIndex="0"
                              MinWidth="150"
                              AutomationProperties.AutomationId="SkillsSortCombo">
                        <ComboBoxItem Content="Alphabetical"/>
                        <ComboBoxItem Content="By Rank"/>
                        <ComboBoxItem Content="Class Skills First"/>
                    </ComboBox>
                </StackPanel>

                <CheckBox Grid.Column="2"
                          x:Name="TrainedOnlyCheckBox"
                          Content="Trained Only"
                          VerticalAlignment="Center"
                          AutomationProperties.AutomationId="SkillsTrainedOnlyCheck"/>

                <!-- Legend -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="10" Margin="20,0,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="3">
                        <TextBlock Text="●" Foreground="{DynamicResource ThemeInfo}" FontSize="{DynamicResource FontSizeSmall}" VerticalAlignment="Center"/>
                        <TextBlock Text="Class" FontSize="{DynamicResource FontSizeSmall}" VerticalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="3">
                        <TextBlock Text="○" FontSize="{DynamicResource FontSizeSmall}" VerticalAlignment="Center"/>
                        <TextBlock Text="Cross-class" FontSize="{DynamicResource FontSizeSmall}" VerticalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="3">
                        <TextBlock Text="✗" Foreground="{DynamicResource ThemeBorder}" FontSize="{DynamicResource FontSizeSmall}" VerticalAlignment="Center" Opacity="0.5"/>
                        <TextBlock Text="Unavailable" FontSize="{DynamicResource FontSizeSmall}" VerticalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Skills List -->
            <Border Grid.Row="3"
                    BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                    BorderThickness="1"
                    CornerRadius="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Header Row -->
                        <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                Padding="10,8,25,8">
                            <Grid ColumnDefinitions="32,25,*,50,50,50,70">
                                <TextBlock Grid.Column="0" Text="" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}"/>
                                <TextBlock Grid.Column="1" Text="" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}"/>
                                <TextBlock Grid.Column="2" Text="Skill" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}"/>
                                <TextBlock Grid.Column="3" Text="Ability" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="Rank" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="5" Text="Total" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="6" Text="" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}"/>
                            </Grid>
                        </Border>

                        <!-- Skills Items -->
                        <ItemsControl x:Name="SkillsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding RowBackground}"
                                            Padding="10,6,25,6"
                                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                            BorderThickness="0,0,0,1"
                                            Opacity="{Binding TextOpacity}">
                                        <Grid ColumnDefinitions="32,25,*,50,50,50,70">
                                            <!-- Icon -->
                                            <Image Grid.Column="0"
                                                   Source="{Binding IconBitmap}"
                                                   Width="24" Height="24"
                                                   Stretch="Uniform"
                                                   IsVisible="{Binding HasGameIcon}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>

                                            <!-- Class Skill Indicator -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding ClassSkillIndicator}"
                                                       Foreground="{DynamicResource ThemeInfo}"
                                                       FontSize="{DynamicResource FontSizeXSmall}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>

                                            <!-- Skill Name -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding SkillName}"
                                                       VerticalAlignment="Center"
                                                       FontSize="{DynamicResource FontSizeNormal}"/>

                                            <!-- Key Ability -->
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding KeyAbility}"
                                                       FontSize="{DynamicResource FontSizeSmall}"
                                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>

                                            <!-- Rank Value -->
                                            <TextBlock Grid.Column="4"
                                                       Text="{Binding RanksDisplay}"
                                                       FontSize="{DynamicResource FontSizeNormal}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>

                                            <!-- Total (Rank + Ability Modifier) -->
                                            <TextBlock Grid.Column="5"
                                                       Text="{Binding TotalDisplay}"
                                                       FontWeight="SemiBold"
                                                       FontSize="{DynamicResource FontSizeNormal}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>

                                            <!-- +/- buttons for rank editing -->
                                            <StackPanel Grid.Column="6"
                                                        Orientation="Horizontal"
                                                        Spacing="2"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center">
                                                <Button Content="-"
                                                        MinWidth="24" MinHeight="24"
                                                        Padding="4,2"
                                                        FontSize="{DynamicResource FontSizeSmall}"
                                                        IsEnabled="{Binding CanDecrement}"
                                                        Tag="{Binding}"
                                                        Click="OnDecrementClick"
                                                        ToolTip.Tip="{Binding DecrementTooltip}"/>
                                                <Button Content="+"
                                                        MinWidth="24" MinHeight="24"
                                                        Padding="4,2"
                                                        FontSize="{DynamicResource FontSizeSmall}"
                                                        IsEnabled="{Binding CanIncrement}"
                                                        Tag="{Binding}"
                                                        Click="OnIncrementClick"
                                                        ToolTip.Tip="{Binding IncrementTooltip}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoSkillsText"
                                   Text="No skill data available"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                   IsVisible="False"
                                   Margin="15,15"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Footer with guidance -->
            <TextBlock Grid.Row="4"
                       x:Name="FooterText"
                       Text="Max ranks: Class skill = Level+3, Cross-class = (Level+3)/2"
                       FontSize="{DynamicResource FontSizeSmall}"
                       FontStyle="Italic"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </Grid>
    </Border>
</UserControl>
