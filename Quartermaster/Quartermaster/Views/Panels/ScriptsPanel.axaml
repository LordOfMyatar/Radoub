<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="Quartermaster.Views.Panels.ScriptsPanel">

    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <!-- Header -->
                <TextBlock Text="Event Scripts"
                           FontSize="{DynamicResource FontSizeXLarge}"
                           FontWeight="Bold"/>

                <!-- Scripts Summary -->
                <TextBlock x:Name="ScriptsSummaryText"
                           Text="0 scripts assigned"
                           FontSize="{DynamicResource FontSizeSmall}"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                <!-- Scripts List -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="8">
                        <ItemsControl x:Name="ScriptsList"
                                      AutomationProperties.AutomationId="ScriptsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="140,*,Auto,Auto" Margin="0,2">
                                        <!-- Event Name Label -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding EventName}"
                                                   FontSize="{DynamicResource FontSizeSmall}"
                                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                   VerticalAlignment="Center"/>

                                        <!-- Editable ResRef TextBox -->
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding ScriptResRef, Mode=TwoWay}"
                                                 FontFamily="Consolas, Courier New, monospace"
                                                 FontSize="{DynamicResource FontSizeSmall}"
                                                 Padding="6,4"
                                                 MaxLength="16"
                                                 Watermark="(none)"
                                                 AutomationProperties.AutomationId="{Binding AutomationId}"/>

                                        <!-- Browse Button -->
                                        <Button Grid.Column="2"
                                                Content="..."
                                                Padding="8,4"
                                                Margin="5,0,0,0"
                                                ToolTip.Tip="Browse scripts"
                                                Tag="{Binding FieldName}"
                                                AutomationProperties.AutomationId="{Binding BrowseButtonId}"/>

                                        <!-- Clear Button -->
                                        <Button Grid.Column="3"
                                                Content="âœ•"
                                                Padding="8,4"
                                                Margin="5,0,0,0"
                                                ToolTip.Tip="Clear script"
                                                Tag="{Binding FieldName}"
                                                AutomationProperties.AutomationId="{Binding ClearButtonId}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoScriptsText"
                                   Text="No scripts assigned"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                   IsVisible="False"
                                   Margin="0,10"/>
                    </StackPanel>
                </Border>

                <!-- Info text -->
                <TextBlock Text="Script names are limited to 16 characters (Aurora Engine constraint)."
                           FontSize="{DynamicResource FontSizeSmall}"
                           FontStyle="Italic"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
