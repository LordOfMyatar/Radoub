<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="Quartermaster.Views.Panels.ScriptsPanel">

    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <!-- Header -->
                <TextBlock Text="Event Scripts"
                           FontSize="20"
                           FontWeight="Bold"/>

                <!-- Scripts Summary -->
                <TextBlock x:Name="ScriptsSummaryText"
                           Text="0 scripts assigned"
                           FontSize="12"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                <!-- Scripts List -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="5">
                        <ItemsControl x:Name="ScriptsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="150,*" Margin="0,4">
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding EventName}"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding ScriptResRef}"
                                                   FontFamily="Consolas, Courier New, monospace"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoScriptsText"
                                   Text="No scripts assigned"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                   IsVisible="False"
                                   Margin="0,10"/>
                    </StackPanel>
                </Border>

                <!-- Conversation Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Conversation" FontWeight="SemiBold" FontSize="14"/>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                            <TextBlock Grid.Column="0" Text="Dialog File:"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="ConversationText"
                                       Text="-"
                                       FontFamily="Consolas, Courier New, monospace"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Placeholder message -->
                <TextBlock Text="Script editing will be implemented in a future sprint."
                           FontSize="12"
                           FontStyle="Italic"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
