<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="Quartermaster.Views.Panels.ScriptsPanel">

    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <!-- Header -->
                <TextBlock Text="Event Scripts"
                           FontSize="20"
                           FontWeight="Bold"/>

                <!-- Scripts Summary -->
                <TextBlock x:Name="ScriptsSummaryText"
                           Text="0 scripts assigned"
                           FontSize="12"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                <!-- Scripts List -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="8">
                        <ItemsControl x:Name="ScriptsList"
                                      AutomationProperties.AutomationId="ScriptsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="140,*,Auto" Margin="0,2">
                                        <!-- Event Name Label -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding EventName}"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                   VerticalAlignment="Center"/>

                                        <!-- Editable ResRef TextBox -->
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding ScriptResRef, Mode=TwoWay}"
                                                 FontFamily="Consolas, Courier New, monospace"
                                                 FontSize="12"
                                                 Padding="6,4"
                                                 MaxLength="16"
                                                 Watermark="(none)"
                                                 AutomationProperties.AutomationId="{Binding AutomationId}"/>

                                        <!-- Clear Button -->
                                        <Button Grid.Column="2"
                                                Content="✕"
                                                Padding="8,4"
                                                Margin="5,0,0,0"
                                                ToolTip.Tip="Clear script"
                                                Tag="{Binding FieldName}"
                                                AutomationProperties.AutomationId="{Binding ClearButtonId}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoScriptsText"
                                   Text="No scripts assigned"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                   IsVisible="False"
                                   Margin="0,10"/>
                    </StackPanel>
                </Border>

                <!-- Conversation Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Conversation" FontWeight="SemiBold" FontSize="14"/>

                        <Grid ColumnDefinitions="140,*,Auto" ColumnSpacing="10">
                            <TextBlock Grid.Column="0" Text="Dialog File:"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" x:Name="ConversationTextBox"
                                     Text=""
                                     FontFamily="Consolas, Courier New, monospace"
                                     MaxLength="16"
                                     Watermark="(none)"
                                     AutomationProperties.AutomationId="ConversationTextBox"/>
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5">
                                <Button x:Name="ClearConversationButton"
                                        Content="✕"
                                        Padding="8,4"
                                        ToolTip.Tip="Clear conversation"
                                        AutomationProperties.AutomationId="ClearConversationButton"/>
                                <Button x:Name="OpenInParleyButton"
                                        Content="Open in Parley"
                                        Padding="10,5"
                                        IsVisible="False"
                                        AutomationProperties.AutomationId="OpenInParleyButton"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Info text -->
                <TextBlock Text="Script names are limited to 16 characters (Aurora Engine constraint)."
                           FontSize="11"
                           FontStyle="Italic"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
