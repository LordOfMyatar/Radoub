<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="600"
             x:Class="Quartermaster.Views.Panels.ClassesPanel">

    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <!-- Header -->
                <TextBlock Text="Classes &amp; Levels"
                           FontSize="{DynamicResource FontSizeXLarge}"
                           FontWeight="Bold"/>

                <!-- Classes Section - 8 slots per Beamdog EE -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="Character Classes" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Grid.Column="1" x:Name="TotalLevelText"
                                       Text="Total Level: 0"
                                       FontSize="12"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </Grid>

                        <!-- Active Classes Only -->
                        <ItemsControl x:Name="ClassSlotsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,3" Padding="10"
                                            Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                            CornerRadius="4">
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                            <!-- Slot Number -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding SlotNumber}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                                       VerticalAlignment="Center"
                                                       Width="20"/>

                                            <!-- Class Name and Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ClassName}"
                                                           FontWeight="SemiBold"
                                                           FontSize="14"/>
                                                <TextBlock Text="{Binding ClassInfoDisplay}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                                <TextBlock Text="{Binding ClassFeatures}"
                                                           FontSize="10"
                                                           FontStyle="Italic"
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <!-- Level Display -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding LevelDisplay}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0"/>

                                            <!-- +/- Placeholder (disabled) -->
                                            <StackPanel Grid.Column="3" Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <Button Content="-" Width="24" Height="24"
                                                        FontSize="12" IsEnabled="False"
                                                        ToolTip.Tip="Level editing coming soon"/>
                                                <Button Content="+" Width="24" Height="24"
                                                        FontSize="12" IsEnabled="False" Margin="2,0,0,0"
                                                        ToolTip.Tip="Level editing coming soon"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Add Class Placeholder -->
                        <Button x:Name="AddClassButton"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                IsEnabled="False"
                                Margin="0,3"
                                Padding="10"
                                ToolTip.Tip="Class editing coming in a future sprint">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="+" FontSize="14" VerticalAlignment="Center"/>
                                <TextBlock Text="Add Class" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- No classes message -->
                        <TextBlock x:Name="NoClassesText"
                                   Text="No classes assigned"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                   IsVisible="False"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Alignment Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Alignment" FontWeight="SemiBold" FontSize="14"/>

                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                            <!-- Alignment Name -->
                            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                                <TextBlock x:Name="AlignmentName"
                                           Text="True Neutral"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Good-Evil (0=Evil, 100=Good) -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <TextBlock Grid.Column="0" Text="Evil" FontSize="11"
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" x:Name="GoodEvilValue"
                                               Text="50"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="Good" FontSize="11"
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                                <Slider x:Name="GoodEvilSlider"
                                        Minimum="0" Maximum="100" Value="50"
                                        TickFrequency="1" IsSnapToTickEnabled="True"
                                        AutomationProperties.AutomationId="GoodEvilSlider"/>
                            </StackPanel>

                            <!-- Lawful-Chaotic (0=Chaotic, 100=Lawful) -->
                            <StackPanel Grid.Row="1" Grid.Column="1">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <TextBlock Grid.Column="0" Text="Chaotic" FontSize="11"
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" x:Name="LawChaosValue"
                                               Text="50"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="Lawful" FontSize="11"
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                                <Slider x:Name="LawChaosSlider"
                                        Minimum="0" Maximum="100" Value="50"
                                        TickFrequency="1" IsSnapToTickEnabled="True"
                                        AutomationProperties.AutomationId="LawChaosSlider"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Auto-Levelup Package Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Levelup Settings" FontWeight="SemiBold" FontSize="14"/>

                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto" ColumnSpacing="15">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Default Package:"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PackageText"
                                       Text="None"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Row="0" Grid.Column="2" x:Name="PackagePickerButton"
                                    Content="..."
                                    Padding="8,4"
                                    ToolTip.Tip="Select package"
                                    AutomationProperties.AutomationId="PackagePickerButton"/>
                        </Grid>

                        <!-- Levelup Wizard Button -->
                        <Button x:Name="LevelupWizardButton"
                                Content="Levelup Wizard..."
                                HorizontalAlignment="Left"
                                IsEnabled="False"
                                Margin="0,10,0,0"
                                ToolTip.Tip="Full levelup wizard coming in a future sprint"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
