<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="Quartermaster.Views.Panels.ClassesPanel">

    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <!-- Header -->
                <TextBlock Text="Classes &amp; Alignment"
                           FontSize="20"
                           FontWeight="Bold"/>

                <!-- Classes Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Character Classes" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock x:Name="TotalLevelText"
                                   Text="Total Level: 0"
                                   FontSize="12"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                        <ItemsControl x:Name="ClassesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,5" Padding="10"
                                            Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                            CornerRadius="4">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding ClassName}" FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text="{Binding ClassDescription}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding LevelDisplay}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoClassesText"
                                   Text="No classes assigned"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                   IsVisible="False"/>
                    </StackPanel>
                </Border>

                <!-- Alignment Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Alignment" FontWeight="SemiBold" FontSize="14"/>

                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">
                            <!-- Alignment Name -->
                            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                                <TextBlock x:Name="AlignmentName"
                                           Text="True Neutral"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Good-Evil -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Good ↔ Evil" FontSize="11"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <Grid ColumnDefinitions="*,Auto">
                                    <ProgressBar Grid.Column="0" x:Name="GoodEvilBar"
                                                 Minimum="0" Maximum="100" Value="50"
                                                 Height="8" CornerRadius="4"/>
                                    <TextBlock Grid.Column="1" x:Name="GoodEvilValue"
                                               Text="50"
                                               FontSize="12"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>

                            <!-- Lawful-Chaotic -->
                            <StackPanel Grid.Row="1" Grid.Column="1">
                                <TextBlock Text="Lawful ↔ Chaotic" FontSize="11"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <Grid ColumnDefinitions="*,Auto">
                                    <ProgressBar Grid.Column="0" x:Name="LawChaosBar"
                                                 Minimum="0" Maximum="100" Value="50"
                                                 Height="8" CornerRadius="4"/>
                                    <TextBlock Grid.Column="1" x:Name="LawChaosValue"
                                               Text="50"
                                               FontSize="12"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Identity Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Identity" FontWeight="SemiBold" FontSize="14"/>

                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8" ColumnSpacing="15">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Race:" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RaceText" Text="Unknown" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Gender:" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="GenderText" Text="Unknown" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Subrace:" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="SubraceText" Text="-" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Deity:" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DeityText" Text="-" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Placeholder message -->
                <TextBlock Text="Class editing will be implemented in a future sprint."
                           FontSize="12"
                           FontStyle="Italic"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
