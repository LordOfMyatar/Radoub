<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="600"
             x:Class="Quartermaster.Views.Panels.StatsPanel">

    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20" Margin="0,0,15,0">
                <!-- Header -->
                <TextBlock Text="Character Statistics"
                           FontSize="{DynamicResource FontSizeXLarge}"
                           FontWeight="Bold"
                           AutomationProperties.AutomationId="StatsPanelHeader"/>

                <!-- Ability Scores Section -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        AutomationProperties.AutomationId="AbilityScoresSection">
                    <StackPanel Spacing="10">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <TextBlock Grid.Column="0" Text="Ability Scores" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeNormal}"/>
                            <TextBlock Grid.Column="1" x:Name="AbilityPointsSummary"
                                       Text=""
                                       FontSize="{DynamicResource FontSizeNormal}"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"
                                       AutomationProperties.AutomationId="AbilityPointsSummary"/>
                            <TextBlock Grid.Column="2"
                                       Text="(?)"
                                       FontSize="{DynamicResource FontSizeSmall}"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"
                                       Cursor="Help"
                                       ToolTip.Tip="Level Points is a best-guess estimate. NWN doesn't store original ability scores, so we can only definitively track points that raised abilities above 18. Characters created with Aurora's leveling wizard will be more accurate."
                                       AutomationProperties.AutomationId="AbilityPointsInfoIcon"/>
                        </Grid>

                        <!-- Column Headers -->
                        <Grid ColumnDefinitions="130,140,60,60,60">
                            <TextBlock Grid.Column="0" Text="Ability" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="1" Text="Base" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="2" Text="Racial" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="3" Text="Total" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="4" Text="Bonus" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </Grid>

                        <!-- Strength Row -->
                        <Grid ColumnDefinitions="130,140,60,60,60" AutomationProperties.AutomationId="StrRow">
                            <TextBlock Grid.Column="0" Text="Strength" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="StrBase" Grid.Column="1" Value="10" Minimum="1" Maximum="255" Increment="1"
                                           FormatString="0" MinWidth="135"
                                           AutomationProperties.AutomationId="StrBaseNumeric"/>
                            <TextBlock x:Name="StrRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="StrTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="{DynamicResource FontSizeMedium}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="StrBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Dexterity Row -->
                        <Grid ColumnDefinitions="130,140,60,60,60" AutomationProperties.AutomationId="DexRow">
                            <TextBlock Grid.Column="0" Text="Dexterity" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="DexBase" Grid.Column="1" Value="10" Minimum="1" Maximum="255" Increment="1"
                                           FormatString="0" MinWidth="135"
                                           AutomationProperties.AutomationId="DexBaseNumeric"/>
                            <TextBlock x:Name="DexRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="DexTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="{DynamicResource FontSizeMedium}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="DexBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Constitution Row -->
                        <Grid ColumnDefinitions="130,140,60,60,60" AutomationProperties.AutomationId="ConRow">
                            <TextBlock Grid.Column="0" Text="Constitution" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="ConBase" Grid.Column="1" Value="10" Minimum="1" Maximum="255" Increment="1"
                                           FormatString="0" MinWidth="135"
                                           AutomationProperties.AutomationId="ConBaseNumeric"/>
                            <TextBlock x:Name="ConRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="ConTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="{DynamicResource FontSizeMedium}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="ConBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Intelligence Row -->
                        <Grid ColumnDefinitions="130,140,60,60,60" AutomationProperties.AutomationId="IntRow">
                            <TextBlock Grid.Column="0" Text="Intelligence" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="IntBase" Grid.Column="1" Value="10" Minimum="1" Maximum="255" Increment="1"
                                           FormatString="0" MinWidth="135"
                                           AutomationProperties.AutomationId="IntBaseNumeric"/>
                            <TextBlock x:Name="IntRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="IntTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="{DynamicResource FontSizeMedium}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="IntBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Wisdom Row -->
                        <Grid ColumnDefinitions="130,140,60,60,60" AutomationProperties.AutomationId="WisRow">
                            <TextBlock Grid.Column="0" Text="Wisdom" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="WisBase" Grid.Column="1" Value="10" Minimum="1" Maximum="255" Increment="1"
                                           FormatString="0" MinWidth="135"
                                           AutomationProperties.AutomationId="WisBaseNumeric"/>
                            <TextBlock x:Name="WisRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="WisTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="{DynamicResource FontSizeMedium}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="WisBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Charisma Row -->
                        <Grid ColumnDefinitions="130,140,60,60,60" AutomationProperties.AutomationId="ChaRow">
                            <TextBlock Grid.Column="0" Text="Charisma" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="ChaBase" Grid.Column="1" Value="10" Minimum="1" Maximum="255" Increment="1"
                                           FormatString="0" MinWidth="135"
                                           AutomationProperties.AutomationId="ChaBaseNumeric"/>
                            <TextBlock x:Name="ChaRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="ChaTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="{DynamicResource FontSizeMedium}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="ChaBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Hit Points Section -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        AutomationProperties.AutomationId="HitPointsSection">
                    <StackPanel Spacing="10">
                        <Grid ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Hit Points" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeNormal}"/>
                            <TextBlock Grid.Column="1" x:Name="ExpectedHpSummary"
                                       Text=""
                                       FontSize="{DynamicResource FontSizeNormal}"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       AutomationProperties.AutomationId="ExpectedHpSummary"/>
                        </Grid>

                        <Grid ColumnDefinitions="*,*,*">
                            <StackPanel Grid.Column="0" Margin="0,0,10,0" AutomationProperties.AutomationId="BaseHpDisplay">
                                <TextBlock Text="Base HP" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <NumericUpDown x:Name="BaseHpNumeric" Value="0" Minimum="1" Maximum="9999" Increment="1"
                                               FormatString="0" MinWidth="135"
                                               AutomationProperties.AutomationId="BaseHpNumeric"
                                               ToolTip.Tip="Hit points from dice rolls (excluding Con bonus)"/>
                                <TextBlock x:Name="BaseHpNote" Text="(dice rolls)" FontSize="{DynamicResource FontSizeXSmall}"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,10,0" AutomationProperties.AutomationId="ConBonusDisplay">
                                <TextBlock Text="Con Bonus" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="ConHpBonus" Text="+0" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"/>
                                <TextBlock x:Name="ConBonusNote" Text="(Con Ã— levels)" FontSize="{DynamicResource FontSizeXSmall}"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" AutomationProperties.AutomationId="MaxHpDisplay">
                                <TextBlock Text="Max HP" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="MaxHpValue" Text="0" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"/>
                                <TextBlock Text="(Base + Con)" FontSize="{DynamicResource FontSizeXSmall}"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Armor Class Section -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        AutomationProperties.AutomationId="ArmorClassSection">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Armor Class" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeNormal}"/>

                        <Grid ColumnDefinitions="*,*,*,*,*">
                            <StackPanel Grid.Column="0" Margin="0,0,10,0" AutomationProperties.AutomationId="NaturalAcDisplay">
                                <TextBlock Text="Natural AC" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <NumericUpDown x:Name="NaturalAcNumeric" Value="0" Minimum="0" Maximum="255" Increment="1"
                                               FormatString="0" MinWidth="135"
                                               AutomationProperties.AutomationId="NaturalAcNumeric"
                                               ToolTip.Tip="Natural armor class bonus"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,10,0" AutomationProperties.AutomationId="BaseAcDisplay">
                                <TextBlock Text="Base" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="10" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="0,0,10,0" AutomationProperties.AutomationId="DexAcDisplay">
                                <TextBlock Text="Dex Bonus" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="DexAcValue" Text="+0" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Margin="0,0,10,0" AutomationProperties.AutomationId="SizeModDisplay">
                                <TextBlock Text="Size Mod" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="SizeModValue" Text="+0" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="4" AutomationProperties.AutomationId="TotalAcDisplay">
                                <TextBlock Text="Total AC" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="TotalAcValue" Text="10" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"
                                           Foreground="{DynamicResource SystemAccentColor}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Combat Stats Section -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        AutomationProperties.AutomationId="CombatStatsSection">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Combat" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeNormal}"/>

                        <Grid ColumnDefinitions="*,*,*">
                            <StackPanel Grid.Column="0" Margin="0,0,10,0" AutomationProperties.AutomationId="BabDisplay">
                                <TextBlock Text="Base Attack" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="BabValue" Text="+0" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"/>
                                <TextBlock x:Name="BabBreakdown" Text="" FontSize="{DynamicResource FontSizeSmall}"
                                           Foreground="{DynamicResource ThemeInfo}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,10,0" AutomationProperties.AutomationId="AprDisplay">
                                <TextBlock Text="Attacks/Round" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="AprValue" Text="1" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"/>
                                <TextBlock x:Name="AttackSequence" Text="" FontSize="{DynamicResource FontSizeSmall}"
                                           Foreground="{DynamicResource ThemeInfo}"
                                           ToolTip.Tip="Attack bonus sequence at full BAB"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" x:Name="CrDisplaySection" AutomationProperties.AutomationId="CrDisplay">
                                <TextBlock Text="Challenge Rating" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="CrTotalDisplay" Text="0" FontSize="{DynamicResource FontSizeLarge}" FontWeight="Bold"
                                           AutomationProperties.AutomationId="CrTotalDisplay"
                                           ToolTip.Tip="Total Challenge Rating (Calculated + Adjustment)"/>
                                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,0">
                                    <StackPanel Orientation="Horizontal" Spacing="3">
                                        <TextBlock Text="Calc:" FontSize="{DynamicResource FontSizeXSmall}" VerticalAlignment="Center"
                                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                        <TextBlock x:Name="CrValueDisplay" Text="0" FontSize="{DynamicResource FontSizeSmall}" VerticalAlignment="Center"
                                                   AutomationProperties.AutomationId="CrValueDisplay"
                                                   ToolTip.Tip="Calculated Challenge Rating (read-only)"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="3">
                                        <TextBlock Text="Adj:" FontSize="{DynamicResource FontSizeXSmall}" VerticalAlignment="Center"
                                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                        <NumericUpDown x:Name="CRAdjustNumeric"
                                                       Minimum="-100"
                                                       Maximum="100"
                                                       Increment="1"
                                                       FormatString="0"
                                                       MinWidth="60"
                                                       FontSize="{DynamicResource FontSizeSmall}"
                                                       AutomationProperties.AutomationId="CRAdjustNumeric"
                                                       ToolTip.Tip="Manual adjustment to Challenge Rating"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Saving Throws Section -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        AutomationProperties.AutomationId="SavingThrowsSection">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Saving Throws" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeNormal}"/>

                        <!-- Column Headers -->
                        <Grid ColumnDefinitions="90,50,50,140,60">
                            <TextBlock Grid.Column="0" Text="Save" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="1" Text="Ability" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="2" Text="Total" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="3" Text="Base" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="4" Text="" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeSmall}" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </Grid>

                        <!-- Fortitude Row -->
                        <Grid ColumnDefinitions="90,50,50,140,60" AutomationProperties.AutomationId="FortRow">
                            <TextBlock Grid.Column="0" Text="Fortitude" VerticalAlignment="Center"/>
                            <TextBlock x:Name="FortAbility" Grid.Column="1" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="FortTotal" Grid.Column="2" Text="+0" FontWeight="Bold" FontSize="{DynamicResource FontSizeMedium}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="FortBase" Grid.Column="3" Value="0" Minimum="-127" Maximum="127" Increment="1"
                                           FormatString="+0;-0;+0" MinWidth="135"
                                           AutomationProperties.AutomationId="FortBaseNumeric"/>
                        </Grid>

                        <!-- Reflex Row -->
                        <Grid ColumnDefinitions="90,50,50,140,60" AutomationProperties.AutomationId="RefRow">
                            <TextBlock Grid.Column="0" Text="Reflex" VerticalAlignment="Center"/>
                            <TextBlock x:Name="RefAbility" Grid.Column="1" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="RefTotal" Grid.Column="2" Text="+0" FontWeight="Bold" FontSize="{DynamicResource FontSizeMedium}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="RefBase" Grid.Column="3" Value="0" Minimum="-127" Maximum="127" Increment="1"
                                           FormatString="+0;-0;+0" MinWidth="135"
                                           AutomationProperties.AutomationId="RefBaseNumeric"/>
                        </Grid>

                        <!-- Will Row -->
                        <Grid ColumnDefinitions="90,50,50,140,60" AutomationProperties.AutomationId="WillRow">
                            <TextBlock Grid.Column="0" Text="Will" VerticalAlignment="Center"/>
                            <TextBlock x:Name="WillAbility" Grid.Column="1" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="WillTotal" Grid.Column="2" Text="+0" FontWeight="Bold" FontSize="{DynamicResource FontSizeMedium}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="WillBase" Grid.Column="3" Value="0" Minimum="-127" Maximum="127" Increment="1"
                                           FormatString="+0;-0;+0" MinWidth="135"
                                           AutomationProperties.AutomationId="WillBaseNumeric"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
