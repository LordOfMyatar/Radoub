<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="600"
             x:Class="Quartermaster.Views.Panels.StatsPanel">

    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <!-- Header -->
                <TextBlock Text="Character Statistics"
                           FontSize="20"
                           FontWeight="Bold"
                           AutomationProperties.AutomationId="StatsPanelHeader"/>

                <!-- Ability Scores Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        AutomationProperties.AutomationId="AbilityScoresSection">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Ability Scores" FontWeight="SemiBold" FontSize="14"/>

                        <!-- Column Headers -->
                        <Grid ColumnDefinitions="100,80,60,60,60">
                            <TextBlock Grid.Column="0" Text="Ability" FontWeight="SemiBold" FontSize="11"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="1" Text="Base" FontWeight="SemiBold" FontSize="11" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="2" Text="Racial" FontWeight="SemiBold" FontSize="11" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="3" Text="Total" FontWeight="SemiBold" FontSize="11" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="4" Text="Bonus" FontWeight="SemiBold" FontSize="11" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </Grid>

                        <!-- Strength Row -->
                        <Grid ColumnDefinitions="100,80,60,60,60" AutomationProperties.AutomationId="StrRow">
                            <TextBlock Grid.Column="0" Text="Strength" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="StrBase" Grid.Column="1" Value="10" Minimum="3" Maximum="40" Increment="1"
                                           FormatString="0" FontSize="12"
                                           AutomationProperties.AutomationId="StrBaseNumeric"/>
                            <TextBlock x:Name="StrRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="StrTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="StrBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Dexterity Row -->
                        <Grid ColumnDefinitions="100,80,60,60,60" AutomationProperties.AutomationId="DexRow">
                            <TextBlock Grid.Column="0" Text="Dexterity" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="DexBase" Grid.Column="1" Value="10" Minimum="3" Maximum="40" Increment="1"
                                           FormatString="0" FontSize="12"
                                           AutomationProperties.AutomationId="DexBaseNumeric"/>
                            <TextBlock x:Name="DexRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="DexTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="DexBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Constitution Row -->
                        <Grid ColumnDefinitions="100,80,60,60,60" AutomationProperties.AutomationId="ConRow">
                            <TextBlock Grid.Column="0" Text="Constitution" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="ConBase" Grid.Column="1" Value="10" Minimum="3" Maximum="40" Increment="1"
                                           FormatString="0" FontSize="12"
                                           AutomationProperties.AutomationId="ConBaseNumeric"/>
                            <TextBlock x:Name="ConRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="ConTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="ConBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Intelligence Row -->
                        <Grid ColumnDefinitions="100,80,60,60,60" AutomationProperties.AutomationId="IntRow">
                            <TextBlock Grid.Column="0" Text="Intelligence" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="IntBase" Grid.Column="1" Value="10" Minimum="3" Maximum="40" Increment="1"
                                           FormatString="0" FontSize="12"
                                           AutomationProperties.AutomationId="IntBaseNumeric"/>
                            <TextBlock x:Name="IntRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="IntTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="IntBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Wisdom Row -->
                        <Grid ColumnDefinitions="100,80,60,60,60" AutomationProperties.AutomationId="WisRow">
                            <TextBlock Grid.Column="0" Text="Wisdom" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="WisBase" Grid.Column="1" Value="10" Minimum="3" Maximum="40" Increment="1"
                                           FormatString="0" FontSize="12"
                                           AutomationProperties.AutomationId="WisBaseNumeric"/>
                            <TextBlock x:Name="WisRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="WisTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="WisBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Charisma Row -->
                        <Grid ColumnDefinitions="100,80,60,60,60" AutomationProperties.AutomationId="ChaRow">
                            <TextBlock Grid.Column="0" Text="Charisma" VerticalAlignment="Center"/>
                            <NumericUpDown x:Name="ChaBase" Grid.Column="1" Value="10" Minimum="3" Maximum="40" Increment="1"
                                           FormatString="0" FontSize="12"
                                           AutomationProperties.AutomationId="ChaBaseNumeric"/>
                            <TextBlock x:Name="ChaRacial" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="ChaTotal" Grid.Column="3" Text="10" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="ChaBonus" Grid.Column="4" Text="+0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Hit Points Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        AutomationProperties.AutomationId="HitPointsSection">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Hit Points" FontWeight="SemiBold" FontSize="14"/>

                        <Grid ColumnDefinitions="*,*,*">
                            <StackPanel Grid.Column="0" Margin="0,0,10,0" AutomationProperties.AutomationId="BaseHpDisplay">
                                <TextBlock Text="Base HP" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="BaseHpValue" Text="0" FontSize="18" FontWeight="Bold"/>
                                <TextBlock x:Name="BaseHpNote" Text="(dice rolls only)" FontSize="10"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,10,0" AutomationProperties.AutomationId="MaxHpDisplay">
                                <TextBlock Text="Maximum HP" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="MaxHpValue" Text="0" FontSize="18" FontWeight="Bold"/>
                                <TextBlock x:Name="ConHpBonus" Text="(+0 Con)" FontSize="10"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" AutomationProperties.AutomationId="CurrentHpDisplay">
                                <TextBlock Text="Current HP" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="CurrentHpValue" Text="0" FontSize="18" FontWeight="Bold"/>
                                <TextBlock x:Name="HpPercent" Text="(0%)" FontSize="10"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Combat Stats Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        AutomationProperties.AutomationId="CombatStatsSection">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Combat" FontWeight="SemiBold" FontSize="14"/>

                        <Grid ColumnDefinitions="*,*,*,*,*">
                            <StackPanel Grid.Column="0" Margin="0,0,10,0" AutomationProperties.AutomationId="NaturalAcDisplay">
                                <TextBlock Text="Natural AC" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="NaturalAcValue" Text="0" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,10,0" AutomationProperties.AutomationId="DexAcDisplay">
                                <TextBlock Text="Dex AC" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="DexAcValue" Text="+0" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="0,0,10,0" AutomationProperties.AutomationId="BabDisplay">
                                <TextBlock Text="Base Attack" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="BabValue" Text="+0" FontSize="16" FontWeight="Bold"/>
                                <TextBlock x:Name="BabBreakdown" Text="" FontSize="10"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Margin="0,0,10,0" AutomationProperties.AutomationId="SpeedDisplay">
                                <TextBlock Text="Speed" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="SpeedValue" Text="Normal" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="4" x:Name="CrDisplaySection" AutomationProperties.AutomationId="CrDisplay">
                                <TextBlock Text="Challenge Rating" FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock x:Name="CrValue" Text="0" FontSize="16" FontWeight="Bold"/>
                                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,5,0,0">
                                    <TextBlock Text="Adjust:" FontSize="10" VerticalAlignment="Center"
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                    <NumericUpDown x:Name="CRAdjustNumeric"
                                                   Minimum="-100"
                                                   Maximum="100"
                                                   Increment="1"
                                                   FormatString="0"
                                                   MinWidth="70"
                                                   FontSize="11"
                                                   AutomationProperties.AutomationId="CRAdjustNumeric"
                                                   ToolTip.Tip="Manual adjustment to Challenge Rating"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Saving Throws Section -->
                <Border BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        AutomationProperties.AutomationId="SavingThrowsSection">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Saving Throws" FontWeight="SemiBold" FontSize="14"/>

                        <!-- Column Headers -->
                        <Grid ColumnDefinitions="100,60,60,60">
                            <TextBlock Grid.Column="0" Text="Save" FontWeight="SemiBold" FontSize="11"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="1" Text="Base" FontWeight="SemiBold" FontSize="11" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="2" Text="Ability" FontWeight="SemiBold" FontSize="11" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Column="3" Text="Total" FontWeight="SemiBold" FontSize="11" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </Grid>

                        <!-- Fortitude Row -->
                        <Grid ColumnDefinitions="100,60,60,60" AutomationProperties.AutomationId="FortRow">
                            <TextBlock Grid.Column="0" Text="Fortitude" VerticalAlignment="Center"/>
                            <TextBlock x:Name="FortBase" Grid.Column="1" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="FortAbility" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="FortTotal" Grid.Column="3" Text="+0" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Reflex Row -->
                        <Grid ColumnDefinitions="100,60,60,60" AutomationProperties.AutomationId="RefRow">
                            <TextBlock Grid.Column="0" Text="Reflex" VerticalAlignment="Center"/>
                            <TextBlock x:Name="RefBase" Grid.Column="1" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="RefAbility" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="RefTotal" Grid.Column="3" Text="+0" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Will Row -->
                        <Grid ColumnDefinitions="100,60,60,60" AutomationProperties.AutomationId="WillRow">
                            <TextBlock Grid.Column="0" Text="Will" VerticalAlignment="Center"/>
                            <TextBlock x:Name="WillBase" Grid.Column="1" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="WillAbility" Grid.Column="2" Text="+0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock x:Name="WillTotal" Grid.Column="3" Text="+0" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
