<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Quartermaster.Views.SoundsetBrowserWindow"
        Title="Soundset Browser"
        AutomationProperties.AutomationId="SoundsetBrowserWindow"
        Width="650" Height="500"
        MinWidth="550" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ThemeBackground}"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        ExtendClientAreaTitleBarHeightHint="30">

    <Window.Styles>
        <!-- Dark mode selection visibility fix -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="{DynamicResource ThemeTitleBar}"
                x:Name="TitleBar"
                PointerPressed="OnTitleBarPointerPressed"
                DoubleTapped="OnTitleBarDoubleTapped">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        IsHitTestVisible="False">
                <TextBlock Text="Soundset Browser"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource ThemeTitleBarForeground}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Filter Row -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Gender:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="1" x:Name="GenderFilterComboBox"
                      AutomationProperties.AutomationId="GenderFilterComboBox"
                      Width="100"
                      SelectionChanged="OnGenderFilterChanged"/>
            <TextBlock Grid.Column="3" Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="4" x:Name="SearchBox"
                     AutomationProperties.AutomationId="SoundsetSearchBox"
                     Watermark="Type to filter soundsets..."
                     TextChanged="OnSearchTextChanged"/>
            <Button Grid.Column="5" x:Name="ClearSearchButton" Content="Clear" Padding="8,4"
                    Margin="5,0,0,0"
                    Click="OnClearSearchClick"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Soundset List -->
            <Border Grid.Column="0"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1"
                    Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" x:Name="SoundsetCountLabel"
                               Text="0 soundsets"
                               Margin="0,0,0,5"/>
                    <ListBox Grid.Row="1" x:Name="SoundsetListBox"
                             AutomationProperties.AutomationId="SoundsetListBox"
                             SelectionChanged="OnSoundsetSelected"
                             DoubleTapped="OnSoundsetDoubleClicked"/>
                </Grid>
            </Border>

            <!-- Preview Panel -->
            <Border Grid.Column="2"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1"
                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Preview"
                               FontWeight="SemiBold"
                               Margin="10,10,10,5"/>

                    <!-- Sound Type Selection -->
                    <StackPanel Grid.Row="1" Margin="10" Spacing="8">
                        <TextBlock Text="Sound Type:" FontSize="12"/>
                        <ComboBox x:Name="SoundTypeComboBox"
                                  AutomationProperties.AutomationId="SoundTypeComboBox"
                                  HorizontalAlignment="Stretch"
                                  SelectionChanged="OnSoundTypeChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}"
                                               Opacity="{Binding Opacity}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button x:Name="PlayButton"
                                Content="Play"
                                AutomationProperties.AutomationId="SoundsetPlayButton"
                                HorizontalAlignment="Stretch"
                                Margin="0,10,0,0"
                                Click="OnPlayClick"
                                IsEnabled="False"/>
                        <Button x:Name="StopButton"
                                Content="Stop"
                                AutomationProperties.AutomationId="SoundsetStopButton"
                                HorizontalAlignment="Stretch"
                                Click="OnStopClick"
                                IsEnabled="False"/>
                    </StackPanel>

                    <!-- Soundset Name -->
                    <TextBlock Grid.Row="2" x:Name="SoundsetNameLabel"
                               Text=""
                               TextAlignment="Center"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="Wrap"
                               MaxHeight="40"
                               Margin="10,5,10,10"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Selected Display -->
        <Border Grid.Row="2"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                Padding="10"
                Margin="0,10,0,0"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Selected:"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           x:Name="SelectedSoundsetLabel"
                           Text="(none)"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0"
                    Spacing="10">
            <Button Content="OK"
                    AutomationProperties.AutomationId="SoundsetOkButton"
                    Width="80"
                    Click="OnOkClick"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    AutomationProperties.AutomationId="SoundsetCancelButton"
                    Width="80"
                    Click="OnCancelClick"
                    IsCancel="True"/>
        </StackPanel>
        </Grid>
    </Grid>
</Window>
