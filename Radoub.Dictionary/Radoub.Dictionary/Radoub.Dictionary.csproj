  <ItemGroup>
    <ProjectReference Include="..\..\Radoub.Formats\Radoub.Formats\Radoub.Formats.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Dictionaries\**\*" />
  </ItemGroup>

</Project>
